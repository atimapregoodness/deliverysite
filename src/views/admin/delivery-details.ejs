<%- layout('layouts/admin') %>
<style>
  /* Modern Admin Dashboard Styles */
  :root {
    --primary-color: #4f46e5;
    --primary-hover: #4338ca;
    --success-color: #059669;
    --warning-color: #d97706;
    --danger-color: #dc2626;
    --info-color: #0891b2;
    --dark-color: #1f2937;
    --light-color: #f9fafb;
    --border-color: #e5e7eb;
    --shadow-sm: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
    --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.1),
      0 2px 4px -1px rgba(0, 0, 0, 0.06);
    --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.1),
      0 4px 6px -2px rgba(0, 0, 0, 0.05);
    --radius-sm: 0.375rem;
    --radius-md: 0.5rem;
    --radius-lg: 0.75rem;
  }

  /* Base text colors - IMPORTANT FOR LIGHT MODE */
  body {
    color: #1f2937;
  }

  .text-dark {
    color: #1f2937 !important;
  }

  .text-muted {
    color: #6b7280 !important;
  }

  #accident {
    max-height: 600px;
    overflow: auto;
  }

  /* Status Badges */
  .status-badge {
    display: inline-flex;
    align-items: center;
    padding: 0.375rem 0.875rem;
    border-radius: 20px;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: capitalize;
    border: 1px solid transparent;
  }

  .status-pending {
    background: #fef3c7;
    color: #92400e;
    border-color: #fbbf24;
  }
  .status-in_transit {
    background: #dbeafe;
    color: #1e40af;
    border-color: #3b82f6;
  }
  .status-delayed {
    background: #fef3c7;
    color: #92400e;
    border-color: #f59e0b;
  }
  .status-delivered {
    background: #d1fae5;
    color: #065f46;
    border-color: #10b981;
  }
  .status-cancelled {
    background: #fee2e2;
    color: #991b1b;
    border-color: #ef4444;
  }

  /* Info Cards */
  .info-card {
    background: white;
    border: 1px solid var(--border-color);
    border-radius: var(--radius-lg);
    padding: 1.25rem;
    margin-bottom: 1rem;
    height: 100%;
    box-shadow: var(--shadow-sm);
    transition: box-shadow 0.2s ease;
    color: #1f2937;
  }

  .info-card:hover {
    box-shadow: var(--shadow-md);
  }

  .info-card .card-title {
    font-size: 1rem;
    font-weight: 600;
    color: #111827;
    margin-bottom: 1rem;
    padding-bottom: 0.5rem;
    border-bottom: 2px solid var(--border-color);
  }

  .info-label {
    font-size: 0.75rem;
    font-weight: 600;
    color: #6b7280;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 0.25rem;
  }

  .info-value {
    font-size: 0.875rem;
    color: #111827;
    margin-bottom: 0.75rem;
    font-weight: 500;
  }

  /* Coordinates Display */
  .coordinates {
    font-family: "SF Mono", "Monaco", "Inconsolata", "Fira Code", "Courier New",
      monospace;
    font-size: 0.75rem;
    color: #6b7280;
    background: #f3f4f6;
    padding: 0.375rem 0.75rem;
    border-radius: var(--radius-sm);
    display: inline-block;
    border: 1px solid var(--border-color);
  }

  /* Action Buttons */
  .action-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0.75rem 1rem;
    border: 1px solid var(--border-color);
    border-radius: var(--radius-md);
    background: white;
    color: #111827;
    font-weight: 500;
    font-size: 0.875rem;
    transition: all 0.2s ease;
    text-decoration: none;
    width: 100%;
  }

  .action-btn:hover {
    background: #f9fafb;
    border-color: #d1d5db;
    transform: translateY(-1px);
    box-shadow: var(--shadow-md);
  }

  .action-btn i {
    margin-right: 0.5rem;
    font-size: 1rem;
  }

  /* Modal Fixes - LIGHT MODE ENHANCED */
  .modal {
    z-index: 1060 !important;
  }

  .modal-backdrop {
    z-index: 1050 !important;
    background-color: rgba(0, 0, 0, 0.7) !important;
  }

  .modal-dialog {
    z-index: 1061 !important;
  }

  .modal-content {
    border: none;
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-lg);
    overflow: hidden;
    background-color: #ffffff;
    color: #1f2937;
  }

  .modal-header {
    background: #f8f9fa;
    border-bottom: 1px solid var(--border-color);
    padding: 1.25rem 1.5rem;
    color: #111827;
  }

  .modal-header .modal-title {
    color: #111827;
    font-weight: 600;
    margin: 0;
  }

  .modal-body {
    padding: 1.5rem;
    max-height: 70vh;
    overflow-y: auto;
    background-color: #ffffff;
    color: #374151;
  }

  .modal-footer {
    background: #f8f9fa;
    border-top: 1px solid var(--border-color);
    padding: 1rem 1.5rem;
    color: #374151;
  }

  /* Ensure all text in modals is visible */
  .modal h1,
  .modal h2,
  .modal h3,
  .modal h4,
  .modal h5,
  .modal h6 {
    color: #111827 !important;
  }

  .modal p,
  .modal span,
  .modal div,
  .modal label {
    color: #374151 !important;
  }

  .modal .text-muted {
    color: #6b7280 !important;
  }

  /* Form Controls */
  .form-label {
    font-weight: 500;
    color: #374151;
    margin-bottom: 0.375rem;
    font-size: 0.875rem;
  }

  .form-control,
  .form-select {
    border: 1px solid var(--border-color);
    border-radius: var(--radius-md);
    padding: 0.5rem 0.75rem;
    font-size: 0.875rem;
    transition: all 0.2s ease;
    background-color: #ffffff;
    color: #1f2937;
  }

  .form-control::placeholder,
  .form-select::placeholder {
    color: #9ca3af;
  }

  .form-control:focus,
  .form-select:focus {
    border-color: var(--primary-color);
    box-shadow: 0 0 0 3px rgba(79, 70, 229, 0.1);
    color: #1f2937;
    background-color: #ffffff;
  }

  /* Accordion */
  .accordion-item {
    border: 1px solid var(--border-color);
    border-radius: var(--radius-md);
    margin-bottom: 0.5rem;
    overflow: hidden;
    background-color: #ffffff;
  }

  .accordion-button {
    background: #f9fafb;
    font-weight: 500;
    padding: 0.75rem 1rem;
    color: #111827;
  }

  .accordion-button:not(.collapsed) {
    background: #f3f4f6;
    color: #111827;
  }

  /* Progress Bar */
  .progress {
    height: 0.5rem;
    background-color: #e5e7eb;
    border-radius: 1rem;
    overflow: hidden;
  }

  .progress-bar {
    background-color: var(--primary-color);
    border-radius: 1rem;
  }

  /* Header Styles */
  .page-header {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    border-radius: var(--radius-lg);
    padding: 1.5rem;
    color: white;
    margin-bottom: 1.5rem;
    position: relative;
    overflow: hidden;
  }

  .page-header::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(
      135deg,
      rgba(255, 255, 255, 0.1) 0%,
      rgba(255, 255, 255, 0) 100%
    );
  }

  .page-header h1,
  .page-header h2,
  .page-header h3,
  .page-header h4,
  .page-header h5,
  .page-header h6,
  .page-header a,
  .page-header span,
  .page-header div {
    color: white !important;
  }

  /* Add to your stylesheet */
  .incident-card {
    border-left: 4px solid;
    margin-bottom: 10px;
  }

  .incident-card.critical {
    border-left-color: #dc3545;
  }

  .incident-card.high {
    border-left-color: #ffc107;
  }

  .incident-card.medium {
    border-left-color: #0dcaf0;
  }

  .incident-card.low {
    border-left-color: #6c757d;
  }

  /* Card Headers */
  .card-header {
    background-color: #f8f9fa !important;
    border-bottom: 1px solid #e5e7eb;
    color: #111827 !important;
  }

  .card-header h5 {
    color: #111827 !important;
  }

  /* Tables in modals */
  .modal .table {
    color: #374151;
  }

  .modal .table thead th {
    color: #111827;
    border-bottom-color: #e5e7eb;
  }

  .modal .table tbody td {
    border-top-color: #e5e7eb;
  }

  /* Quick Actions Grid */
  .quick-actions-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
    gap: 0.75rem;
    margin-bottom: 1.5rem;
  }

  /* Alert Messages in modals */
  .modal .alert {
    color: #1f2937;
  }

  .modal .alert-info {
    background-color: #dbeafe;
    border-color: #93c5fd;
    color: #1e40af;
  }

  .modal .alert-danger {
    background-color: #fee2e2;
    border-color: #fca5a5;
    color: #991b1b;
  }

  .modal .alert-warning {
    background-color: #fef3c7;
    border-color: #fcd34d;
    color: #92400e;
  }

  .modal .alert-success {
    background-color: #d1fae5;
    border-color: #6ee7b7;
    color: #065f46;
  }

  /* Badges in modals */
  .modal .badge {
    color: #ffffff;
  }

  .modal .badge.bg-light {
    color: #374151;
  }

  /* Responsive Adjustments */
  @media (max-width: 768px) {
    .quick-actions-grid {
      grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
    }

    .modal-dialog {
      margin: 0.5rem;
    }

    .page-header {
      padding: 1rem;
    }
  }

  /* Loading States */
  .loading {
    opacity: 0.7;
    pointer-events: none;
  }

  .loading::after {
    content: "";
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 20px;
    height: 20px;
    border: 2px solid #e5e7eb;
    border-top-color: var(--primary-color);
    border-radius: 50%;
    animation: spin 1s linear infinite;
  }

  @keyframes spin {
    to {
      transform: translate(-50%, -50%) rotate(360deg);
    }
  }

  /* Alert Messages */
  .alert-toast {
    position: fixed;
    top: 1rem;
    right: 1rem;
    z-index: 9999;
    min-width: 300px;
    max-width: 400px;
    animation: slideIn 0.3s ease;
    color: #1f2937;
  }

  @keyframes slideIn {
    from {
      transform: translateX(100%);
      opacity: 0;
    }
    to {
      transform: translateX(0);
      opacity: 1;
    }
  }

  /* Ensure text in form groups is visible */
  .form-text {
    color: #6b7280 !important;
  }

  /* Make sure all buttons have proper contrast */
  .btn-outline-light {
    color: #1f2937;
    border-color: #d1d5db;
  }

  .btn-outline-light:hover {
    color: #111827;
    background-color: #f3f4f6;
    border-color: #9ca3af;
  }

  /* Modal close button */
  .modal-header .btn-close {
    filter: none;
  }
</style>
<div class="container-fluid py-4">
  <!-- Header -->
  <div class="page-header">
    <div
      class="d-flex justify-content-between align-items-start position-relative"
    >
      <div>
        <a href="/admin/deliveries" class="btn btn-light btn-sm mb-3">
          <i class="fas fa-arrow-left me-2"></i> Back to Deliveries
        </a>
        <h2 class="mb-2 fs-6">
          Delivery Details - <b><%= delivery.trackingId %></b>
        </h2>

        <div class="d-flex align-items-center gap-3">
          <span class="status-badge status-<%= delivery.status %>">
            <i class="fas fa-circle me-2" style="font-size: 0.5rem"></i>
            <%= delivery.status.replace('_', ' ') %>
          </span>
          <span class="text-white-75">
            <i class="far fa-calendar me-1"></i>
            <%= new Date(delivery.createdAt).toLocaleDateString('en-US', { year:
            'numeric', month: 'short', day: 'numeric', hour: '2-digit', minute:
            '2-digit' }) %>
          </span>
        </div>
      </div>
      <div class="d-flex gap-2">
        <button
          class="btn btn-outline-light"
          data-bs-toggle="modal"
          data-bs-target="#editModal"
        >
          <i class="fas fa-edit me-2"></i>Edit
        </button>
        <div class="dropdown">
          <button
            class="btn btn-light dropdown-toggle"
            type="button"
            data-bs-toggle="dropdown"
          >
            <i class="fas fa-ellipsis-v"></i>
          </button>
          <ul class="dropdown-menu">
            <li>
              <a
                class="dropdown-item"
                href="/admin/deliveries/<%= delivery._id %>/print"
                target="_blank"
              >
                <i class="fas fa-print me-2"></i>Print Details
              </a>
            </li>
            <li><hr class="dropdown-divider" /></li>
            <li>
              <a
                class="dropdown-item text-danger"
                href="javascript:void(0)"
                onclick="deleteDelivery()"
              >
                <i class="fas fa-trash me-2"></i>Delete Delivery
              </a>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>

  <!-- Quick Actions -->
  <div class="mb-4">
    <h5 class="mb-3 text-dark">Quick Actions</h5>
    <div class="quick-actions-grid">
      <button
        class="action-btn"
        data-bs-toggle="modal"
        data-bs-target="#statusModal"
      >
        <i class="fas fa-sync-alt me-2 text-primary"></i>Update Status
      </button>
      <button
        class="action-btn"
        data-bs-toggle="modal"
        data-bs-target="#incidentModal"
      >
        <i class="fas fa-exclamation-triangle me-2 text-warning"></i>Report
        Incident
      </button>
      <button
        class="action-btn"
        data-bs-toggle="modal"
        data-bs-target="#locationModal"
      >
        <i class="fas fa-map-marker-alt me-2 text-info"></i>Update Location
      </button>
      <button
        class="action-btn"
        data-bs-toggle="modal"
        data-bs-target="#driverModal"
      >
        <i class="fas fa-user me-2 text-success"></i>Assign Driver
      </button>
      <button class="action-btn" onclick="geocodeAddresses()">
        <i class="fas fa-map-pin me-2 text-purple"></i>Geocode Addresses
      </button>
      <% if (delivery.status !== 'delivered') { %>
      <button class="action-btn" onclick="markAsDelivered()">
        <i class="fas fa-check-circle me-2 text-success"></i>Mark Delivered
      </button>
      <% } %> <% if (delivery.status !== 'cancelled' && delivery.status !==
      'delivered') { %>
      <button class="action-btn" onclick="cancelDelivery()">
        <i class="fas fa-times-circle me-2 text-danger"></i>Cancel Delivery
      </button>
      <% } %>
    </div>
  </div>

  <!-- Delivery Details Grid -->
  <div class="row g-4">
    <!-- Sender Information -->
    <div class="col-xl-3 col-lg-4 col-md-6">
      <div class="info-card">
        <h5 class="card-title">
          <i class="fas fa-paper-plane me-2 text-primary"></i>Sender
        </h5>
        <div class="mb-3">
          <div class="info-label">Name</div>
          <div class="info-value"><%= delivery.sender.name %></div>
        </div>
        <div class="mb-3">
          <div class="info-label">Contact</div>
          <div class="info-value">
            <div>
              <i class="fas fa-phone me-2 text-muted"></i>
              <%= delivery.sender.phone %>
            </div>
            <div>
              <i class="fas fa-envelope me-2 text-muted"></i>
              <%= delivery.sender.email %>
            </div>
          </div>
        </div>
        <div class="mb-3">
          <div class="info-label">Address</div>
          <div class="info-value">
            <div><%= delivery.sender.address.street %></div>
            <div>
              <%= delivery.sender.address.city %>, <%=
              delivery.sender.address.state %> <%=
              delivery.sender.address.postalCode %>
            </div>
            <% if (delivery.sender.address.country) { %>
            <div><%= delivery.sender.address.country %></div>
            <% } %>
          </div>
          <% if (delivery.sender.address.coordinates &&
          delivery.sender.address.coordinates.coordinates &&
          delivery.sender.address.coordinates.coordinates[0] !== 0) { %>
          <div class="mt-2">
            <div class="coordinates">
              <i class="fas fa-map-marker-alt me-1"></i>
              <%= delivery.sender.address.coordinates.coordinates[0].toFixed(6)
              %>, <%=
              delivery.sender.address.coordinates.coordinates[1].toFixed(6) %>
            </div>
            <% if (delivery.sender.address.geocoded) { %>
            <span class="badge bg-success ms-2">✓ Geocoded</span>
            <% } %>
          </div>
          <% } %>
        </div>
      </div>
    </div>

    <!-- Receiver Information -->
    <div class="col-xl-3 col-lg-4 col-md-6">
      <div class="info-card">
        <h5 class="card-title">
          <i class="fas fa-user-check me-2 text-success"></i>Receiver
        </h5>
        <div class="mb-3">
          <div class="info-label">Name</div>
          <div class="info-value"><%= delivery.receiver.name %></div>
        </div>
        <div class="mb-3">
          <div class="info-label">Contact</div>
          <div class="info-value">
            <div>
              <i class="fas fa-phone me-2 text-muted"></i>
              <%= delivery.receiver.phone %>
            </div>
            <div>
              <i class="fas fa-envelope me-2 text-muted"></i>
              <%= delivery.receiver.email %>
            </div>
          </div>
        </div>
        <div class="mb-3">
          <div class="info-label">Address</div>
          <div class="info-value">
            <div><%= delivery.receiver.address.street %></div>
            <div>
              <%= delivery.receiver.address.city %>, <%=
              delivery.receiver.address.state %> <%=
              delivery.receiver.address.postalCode %>
            </div>
            <% if (delivery.receiver.address.country) { %>
            <div><%= delivery.receiver.address.country %></div>
            <% } %>
          </div>
          <% if (delivery.receiver.address.coordinates &&
          delivery.receiver.address.coordinates.coordinates &&
          delivery.receiver.address.coordinates.coordinates[0] !== 0) { %>
          <div class="mt-2">
            <div class="coordinates">
              <i class="fas fa-map-marker-alt me-1"></i>
              <%=
              delivery.receiver.address.coordinates.coordinates[0].toFixed(6)
              %>, <%=
              delivery.receiver.address.coordinates.coordinates[1].toFixed(6) %>
            </div>
            <% if (delivery.receiver.address.geocoded) { %>
            <span class="badge bg-success ms-2">✓ Geocoded</span>
            <% } %>
          </div>
          <% } %>
        </div>
        <% if (delivery.receiver.deliveryInstructions) { %>
        <div class="mb-3">
          <div class="info-label">Instructions</div>
          <div class="info-value">
            <i class="fas fa-info-circle me-2 text-info"></i>
            <%= delivery.receiver.deliveryInstructions %>
          </div>
        </div>
        <% } %>
        <div class="mb-3">
          <div class="info-label">Signature Required</div>
          <div class="info-value">
            <span
              class="badge bg-<%= delivery.receiver.signatureRequired ? 'warning' : 'secondary' %>"
            >
              <%= delivery.receiver.signatureRequired ? 'Yes' : 'No' %>
            </span>
          </div>
        </div>
      </div>
    </div>

    <!-- Package Information -->
    <div class="col-xl-3 col-lg-4 col-md-6">
      <div class="info-card">
        <h5 class="card-title">
          <i class="fas fa-box me-2 text-warning"></i>Package
        </h5>
        <div class="mb-3">
          <div class="info-label">Description</div>
          <div class="info-value"><%= delivery.package.description %></div>
        </div>
        <div class="mb-3">
          <div class="info-label">Category</div>
          <div class="info-value">
            <span class="badge bg-info"><%= delivery.package.category %></span>
          </div>
        </div>
        <div class="mb-3">
          <div class="info-label">Weight</div>
          <div class="info-value"><%= delivery.package.weight %> kg</div>
        </div>
        <% if (delivery.package.dimensions) { %>
        <div class="mb-3">
          <div class="info-label">Dimensions</div>
          <div class="info-value">
            <%= delivery.package.dimensions.length %> × <%=
            delivery.package.dimensions.width %> × <%=
            delivery.package.dimensions.height %> cm
          </div>
        </div>
        <% } %>
        <div class="mb-3">
          <div class="info-label">Value</div>
          <div class="info-value">
            $<%= delivery.package.value ?
            parseFloat(delivery.package.value).toFixed(2) : '0.00' %>
          </div>
        </div>
      </div>
    </div>

    <!-- Tracking Information -->
    <div class="col-xl-3 col-lg-6 col-md-6">
      <div class="info-card">
        <h5 class="card-title">
          <i class="fas fa-shipping-fast me-2 text-primary"></i>Tracking
        </h5>
        <% if (delivery.trackingData && delivery.trackingData.currentLocation) {
        %>
        <div class="mb-3">
          <div class="info-label">Current Location</div>
          <div class="coordinates mb-2">
            <i class="fas fa-location-arrow me-1"></i>
            <%= delivery.trackingData.currentLocation.coordinates[0].toFixed(6)
            %>, <%=
            delivery.trackingData.currentLocation.coordinates[1].toFixed(6) %>
          </div>
        </div>
        <% } %>
        <div class="mb-3">
          <div class="info-label">Route Progress</div>
          <div
            class="info-value d-flex justify-content-between align-items-center"
          >
            <span
              ><%= delivery.trackingData && delivery.trackingData.routeProgress
              ? delivery.trackingData.routeProgress + '%' : '0%' %></span
            >
            <span class="text-muted small">
              ETA: <%= new
              Date(delivery.estimatedDelivery).toLocaleTimeString([], { hour:
              '2-digit', minute: '2-digit' }) %>
            </span>
          </div>
          <div class="progress">
            <div
