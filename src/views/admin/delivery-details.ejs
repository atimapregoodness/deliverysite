<script>
  document.addEventListener("DOMContentLoaded", () => {
    // Bootstrap handles z-index correctly — DO NOT override
    // Removed manual zIndex manipulation

    // Attach AJAX handler ONLY to forms that explicitly request it
    document.querySelectorAll("form[data-ajax='true']").forEach((form) => {
      form.addEventListener("submit", handleAjaxForm);
    });
  });

  /* ============================
   AJAX FORM HANDLER
============================ */
  async function handleAjaxForm(e) {
    e.preventDefault();
    const form = e.target;
    const submitBtn = form.querySelector("button[type='submit']");
    const originalHTML = submitBtn.innerHTML;

    submitBtn.innerHTML =
      '<span class="spinner-border spinner-border-sm me-2"></span>Processing...';
    submitBtn.disabled = true;

    try {
      const res = await fetch(form.action, {
        method: form.method || "POST",
        body: new FormData(form),
        headers: { Accept: "application/json" },
      });

      const data = await res.json();

      if (!res.ok || !data.success) {
        throw new Error(data.error || "Operation failed");
      }

      const modalEl = form.closest(".modal");
      if (modalEl) bootstrap.Modal.getInstance(modalEl)?.hide();

      toast("success", data.message || "Operation successful");
      setTimeout(() => location.reload(), 1200);
    } catch (err) {
      toast("danger", err.message);
      submitBtn.innerHTML = originalHTML;
      submitBtn.disabled = false;
    }
  }

  /* ============================
   TOAST NOTIFICATIONS
============================ */
  function toast(type, message) {
    document.querySelectorAll(".alert-toast").forEach((a) => a.remove());

    const div = document.createElement("div");
    div.className = `alert alert-${type} alert-dismissible fade show alert-toast position-fixed top-0 end-0 m-3`;
    div.style.zIndex = 1080;

    div.innerHTML = `
    <div class="d-flex align-items-center">
      <strong class="me-2">${type === "success" ? "✔" : "⚠"}</strong>
      <span>${message}</span>
      <button class="btn-close ms-auto" data-bs-dismiss="alert"></button>
    </div>
  `;

    document.body.appendChild(div);
    setTimeout(() => div.remove(), 5000);
  }

  /* ============================
   ACTION HANDLERS
============================ */
  async function postAction(url, confirmText, successMsg) {
    if (!confirm(confirmText)) return;

    toast("info", "Processing...");

    try {
      const res = await fetch(url, { method: "POST" });
      const data = await res.json();

      if (!res.ok || !data.success) {
        throw new Error(data.error || "Request failed");
      }

      toast("success", successMsg || data.message);
      setTimeout(() => location.reload(), 1000);
    } catch (err) {
      toast("danger", err.message);
    }
  }

  function geocodeAddresses() {
    postAction(
      `/admin/deliveries/<%= delivery._id %>/geocode`,
      "Geocode sender and receiver addresses?",
      "Addresses geocoded successfully"
    );
  }

  function markAsDelivered() {
    postAction(
      `/admin/deliveries/<%= delivery._id %>/mark-delivered`,
      "Mark this delivery as delivered?",
      "Delivery marked as delivered"
    );
  }

  function cancelDelivery() {
    postAction(
      `/admin/deliveries/<%= delivery._id %>/cancel`,
      "Cancel this delivery? This cannot be undone.",
      "Delivery cancelled"
    );
  }

  async function deleteDelivery() {
    if (!confirm("Delete this delivery permanently?")) return;

    try {
      const res = await fetch(`/admin/deliveries/<%= delivery._id %>`, {
        method: "DELETE",
      });
      const data = await res.json();

      if (!res.ok || !data.success) {
        throw new Error(data.error || "Delete failed");
      }

      toast("success", "Delivery deleted");
      setTimeout(() => (location.href = "/admin/deliveries"), 1200);
    } catch (err) {
      toast("danger", err.message);
    }
  }
</script>
