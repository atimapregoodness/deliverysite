<%- layout('layouts/admin') %>

<style>
  .coordinate-box {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    border-radius: 0.75rem;
    padding: 1.5rem;
  }
  
  .info-card {
    background: white;
    border-radius: 0.5rem;
    box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06);
    padding: 1.5rem;
  }
  
  .action-btn {
    transition: all 0.2s ease;
  }
  
  .action-btn:hover {
    transform: translateY(-1px);
  }
</style>

<div class="min-h-screen bg-gray-50 py-8">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Back button -->
    <a href="/admin/warehouses" class="inline-flex items-center text-sm text-gray-500 hover:text-gray-700 mb-6">
      <i class="fas fa-arrow-left mr-2"></i> Back to Warehouses
    </a>

    <!-- Flash Messages -->
    <% if (messages.error) { %>
      <div class="mb-6 p-4 bg-red-50 border-l-4 border-red-400">
        <div class="flex">
          <div class="flex-shrink-0">
            <i class="fas fa-exclamation-circle text-red-400"></i>
          </div>
          <div class="ml-3">
            <p class="text-sm text-red-700"><%= messages.error %></p>
          </div>
        </div>
      </div>
    <% } %>
    
    <% if (messages.success) { %>
      <div class="mb-6 p-4 bg-green-50 border-l-4 border-green-400">
        <div class="flex">
          <div class="flex-shrink-0">
            <i class="fas fa-check-circle text-green-400"></i>
          </div>
          <div class="ml-3">
            <p class="text-sm text-green-700"><%= messages.success %></p>
          </div>
        </div>
      </div>
    <% } %>

    <!-- Warehouse Header -->
    <div class="bg-white shadow rounded-lg overflow-hidden mb-6">
      <div class="px-6 py-8 bg-gradient-to-r from-blue-500 to-blue-600">
        <div class="flex items-center justify-between">
          <div class="flex items-center">
            <div class="p-3 bg-white bg-opacity-20 rounded-lg mr-4">
              <i class="fas fa-warehouse text-2xl text-white"></i>
            </div>
            <div>
              <h1 class="text-3xl font-bold text-white"><%= warehouse.name %></h1>
              <p class="text-blue-100 mt-1">Warehouse Location</p>
            </div>
          </div>
          <div class="flex space-x-3">
            <a href="/admin/warehouses/<%= warehouse._id %>/edit" 
               class="bg-white text-blue-600 px-4 py-2 rounded-md hover:bg-blue-50 transition duration-150 action-btn">
              <i class="fas fa-edit mr-2"></i> Edit
            </a>
            <form action="/admin/warehouses/<%= warehouse._id %>?_method=DELETE" 
                  method="POST" 
                  class="inline delete-warehouse-form"
                  data-id="<%= warehouse._id %>">
              <button type="submit" 
                      class="bg-red-500 text-white px-4 py-2 rounded-md hover:bg-red-600 transition duration-150 action-btn"
                      onclick="return confirm('Are you sure you want to delete this warehouse?')">
                <i class="fas fa-trash mr-2"></i> Delete
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>

    <!-- Main Content -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
      <!-- Left Column: Location Details -->
      <div class="lg:col-span-2 space-y-6">
        <!-- Coordinates Card -->
        <div class="info-card">
          <h2 class="text-xl font-semibold text-gray-900 mb-4">Location Coordinates</h2>
          
          <% if (warehouse.location.coordinates[0] !== 0 && warehouse.location.coordinates[1] !== 0) { %>
            <div class="coordinate-box mb-4">
              <div class="text-center">
                <div class="text-2xl font-mono font-bold">
                  <%= warehouse.location.coordinates[1].toFixed(6) %>, <%= warehouse.location.coordinates[0].toFixed(6) %>
                </div>
                <div class="text-blue-100 text-sm mt-2">
                  Latitude, Longitude
                </div>
              </div>
            </div>
            
            <!-- Map Visualization -->
            <div class="mt-6">
              <h3 class="text-lg font-medium text-gray-900 mb-3">Location Visualization</h3>
              <div class="h-64 bg-gradient-to-r from-blue-400 to-purple-500 rounded-lg flex items-center justify-center">
                <div class="text-center text-white">
                  <i class="fas fa-map-marker-alt text-5xl mb-3"></i>
                  <p class="text-xl font-semibold"><%= warehouse.name %></p>
                  <p class="text-blue-100 mt-1">Geolocated Warehouse</p>
                </div>
              </div>
            </div>
          <% } else { %>
            <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-4">
              <div class="flex">
                <div class="flex-shrink-0">
                  <i class="fas fa-exclamation-triangle text-yellow-400"></i>
                </div>
                <div class="ml-3">
                  <h3 class="text-sm font-medium text-yellow-800">Location Not Set</h3>
                  <div class="mt-2 text-sm text-yellow-700">
                    <p>This warehouse doesn't have coordinates set. Please update the location to enable geospatial features.</p>
                  </div>
                </div>
              </div>
            </div>
          <% } %>
        </div>

        <!-- Technical Details -->
        <div class="info-card">
          <h2 class="text-xl font-semibold text-gray-900 mb-4">Technical Information</h2>
          <div class="space-y-4">
            <div class="flex justify-between items-center py-3 border-b border-gray-200">
              <span class="text-gray-600">Database ID</span>
              <span class="font-mono text-sm bg-gray-100 px-2 py-1 rounded"><%= warehouse._id %></span>
            </div>
            <div class="flex justify-between items-center py-3 border-b border-gray-200">
              <span class="text-gray-600">Location Type</span>
              <span class="font-medium"><%= warehouse.location.type %></span>
            </div>
            <div class="flex justify-between items-center py-3 border-b border-gray-200">
              <span class="text-gray-600">Geospatial Index</span>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                <i class="fas fa-check mr-1"></i> Enabled
              </span>
            </div>
          </div>
        </div>
      </div>

      <!-- Right Column: Metadata -->
      <div class="space-y-6">
        <!-- Timeline -->
        <div class="info-card">
          <h2 class="text-xl font-semibold text-gray-900 mb-4">Timeline</h2>
          <div class="space-y-4">
            <div>
              <div class="flex items-center mb-2">
                <div class="flex-shrink-0 w-8 h-8 rounded-full bg-blue-100 flex items-center justify-center">
                  <i class="fas fa-plus text-blue-600 text-sm"></i>
                </div>
                <div class="ml-3">
                  <p class="text-sm font-medium text-gray-900">Created</p>
                  <p class="text-sm text-gray-500"><%= new Date(warehouse.createdAt).toLocaleString() %></p>
                </div>
              </div>
            </div>
            <div>
              <div class="flex items-center mb-2">
                <div class="flex-shrink-0 w-8 h-8 rounded-full bg-green-100 flex items-center justify-center">
                  <i class="fas fa-sync text-green-600 text-sm"></i>
                </div>
                <div class="ml-3">
                  <p class="text-sm font-medium text-gray-900">Last Updated</p>
                  <p class="text-sm text-gray-500"><%= new Date(warehouse.updatedAt).toLocaleString() %></p>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Actions Card -->
        <div class="info-card">
          <h2 class="text-xl font-semibold text-gray-900 mb-4">Quick Actions</h2>
          <div class="space-y-3">
            <a href="/admin/warehouses/<%= warehouse._id %>/edit" 
               class="w-full flex items-center justify-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 action-btn">
              <i class="fas fa-edit mr-2"></i> Edit Warehouse
            </a>
            
            <% if (warehouse.location.coordinates[0] !== 0 && warehouse.location.coordinates[1] !== 0) { %>
              <button onclick="copyCoordinates()" 
                      class="w-full flex items-center justify-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 action-btn">
                <i class="fas fa-copy mr-2"></i> Copy Coordinates
              </button>
              
              <a href="https://www.google.com/maps?q=<%= warehouse.location.coordinates[1] %>,<%= warehouse.location.coordinates[0] %>" 
                 target="_blank"
                 class="w-full flex items-center justify-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 action-btn">
                <i class="fas fa-external-link-alt mr-2"></i> Open in Google Maps
              </a>
            <% } %>
            
            <form action="/admin/warehouses/<%= warehouse._id %>?_method=DELETE" 
                  method="POST" 
                  class="delete-warehouse-form"
                  data-id="<%= warehouse._id %>">
              <button type="submit" 
                      onclick="return confirm('Are you sure you want to delete this warehouse?')"
                      class="w-full flex items-center justify-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 action-btn">
                <i class="fas fa-trash mr-2"></i> Delete Warehouse
              </button>
            </form>
          </div>
        </div>

        <!-- Status Card -->
        <div class="info-card">
          <h2 class="text-xl font-semibold text-gray-900 mb-4">Status</h2>
          <div class="space-y-2">
            <div class="flex justify-between">
              <span class="text-gray-600">Location Status</span>
              <% if (warehouse.location.coordinates[0] !== 0 && warehouse.location.coordinates[1] !== 0) { %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                  <i class="fas fa-check-circle mr-1"></i> Set
                </span>
              <% } else { %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                  <i class="fas fa-exclamation-circle mr-1"></i> Not Set
                </span>
              <% } %>
            </div>
            <div class="flex justify-between">
              <span class="text-gray-600">Geospatial</span>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                <i class="fas fa-map-marker-alt mr-1"></i> 2D Sphere
              </span>
            </div>
            <div class="flex justify-between">
              <span class="text-gray-600">Database</span>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-purple-100 text-purple-800">
                <i class="fas fa-database mr-1"></i> Active
              </span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
function copyCoordinates() {
  const coordinates = `<%= warehouse.location.coordinates[1] %>, <%= warehouse.location.coordinates[0] %>`;
  
  navigator.clipboard.writeText(coordinates).then(() => {
    // Show success message
    const toast = document.createElement('div');
    toast.className = 'fixed top-4 right-4 z-50 px-4 py-2 rounded-md shadow-lg bg-green-500 text-white';
    toast.textContent = 'Coordinates copied to clipboard!';
    
    document.body.appendChild(toast);
    
    setTimeout(() => {
      toast.remove();
    }, 3000);
  }).catch(err => {
    console.error('Failed to copy: ', err);
  });
}

// Handle delete form submission
document.querySelectorAll('.delete-warehouse-form').forEach(form => {
  form.addEventListener('submit', async function(e) {
    e.preventDefault();
    
    const warehouseId = this.dataset.id;
    const warehouseName = '<%= warehouse.name %>';
    
    if (!confirm(`Are you sure you want to delete warehouse "${warehouseName}"? This action cannot be undone.`)) {
      return;
    }
    
    const button = this.querySelector('button');
    const originalHTML = button.innerHTML;
    button.innerHTML = '<i class="fas fa-spinner fa-spin mr-2"></i> Deleting...';
    button.disabled = true;
    
    try {
      const response = await fetch(this.action, {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
      });
      
      const data = await response.json();
      
      if (data.success) {
        // Redirect to warehouses list
        window.location.href = '/admin/warehouses?success=' + encodeURIComponent(data.message);
      } else {
        throw new Error(data.error || 'Failed to delete warehouse');
      }
    } catch (error) {
      alert(error.message);
      button.innerHTML = originalHTML;
      button.disabled = false;
    }
  });
});
</script>