<%- layout('layouts/admin') %>

<style>
  .required:after {
    content: " *";
    color: #ef4444;
  }
  
  .map-container {
    height: 300px;
    border-radius: 0.5rem;
    overflow: hidden;
  }
</style>

<div class="min-h-screen bg-gray-50 py-8">
  <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="bg-white shadow rounded-lg">
      <div class="px-6 py-4 border-b border-gray-200">
        <div class="flex items-center justify-between">
          <div>
            <h1 class="text-2xl font-bold text-gray-900">Edit Warehouse</h1>
            <p class="mt-1 text-sm text-gray-600">Update warehouse details</p>
          </div>
          <a href="/admin/warehouses" class="text-sm text-gray-500 hover:text-gray-700">
            <i class="fas fa-arrow-left mr-1"></i> Back to Warehouses
          </a>
        </div>
      </div>

      <form action="/admin/warehouses/<%= warehouse._id %>?_method=PUT" method="POST" class="px-6 py-6">
        <!-- Flash Messages -->
        <% if (messages.error) { %>
          <div class="mb-6 p-4 bg-red-50 border border-red-200 rounded-md">
            <div class="flex">
              <div class="flex-shrink-0">
                <i class="fas fa-exclamation-circle text-red-400"></i>
              </div>
              <div class="ml-3">
                <p class="text-sm text-red-700"><%= messages.error %></p>
              </div>
            </div>
          </div>
        <% } %>

        <!-- Warehouse Information -->
        <div class="mb-8">
          <h3 class="text-lg font-medium text-gray-900 mb-4">Warehouse Information</h3>
          <div class="space-y-6">
            <div>
              <label for="name" class="block text-sm font-medium text-gray-700 required">Warehouse Name</label>
              <input type="text" name="name" id="name" value="<%= warehouse.name %>" 
                     class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm"
                     required
                     placeholder="e.g., Main Distribution Center">
            </div>
          </div>
        </div>

        <!-- Location Information -->
        <div class="mb-8">
          <h3 class="text-lg font-medium text-gray-900 mb-4">Location Coordinates</h3>
          <p class="text-sm text-gray-600 mb-4">Update the latitude and longitude coordinates for this warehouse location.</p>
          
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <label for="latitude" class="block text-sm font-medium text-gray-700 required">Latitude</label>
              <input type="number" step="any" name="latitude" id="latitude" 
                     value="<%= warehouse.location.coordinates[1] %>"
                     class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm"
                     required>
              <p class="mt-1 text-xs text-gray-500">Current: <%= warehouse.location.coordinates[1].toFixed(6) %></p>
            </div>
            
            <div>
              <label for="longitude" class="block text-sm font-medium text-gray-700 required">Longitude</label>
              <input type="number" step="any" name="longitude" id="longitude" 
                     value="<%= warehouse.location.coordinates[0] %>"
                     class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm"
                     required>
              <p class="mt-1 text-xs text-gray-500">Current: <%= warehouse.location.coordinates[0].toFixed(6) %></p>
            </div>
          </div>
          
          <!-- Map Preview -->
          <div class="mt-6">
            <label class="block text-sm font-medium text-gray-700 mb-2">Location Preview</label>
            <div id="mapPreview" class="map-container bg-gray-100 border border-gray-300">
              <!-- Map will be dynamically updated -->
            </div>
          </div>
        </div>

        <!-- Metadata -->
        <div class="mb-8">
          <h3 class="text-lg font-medium text-gray-900 mb-4">Metadata</h3>
          <div class="bg-gray-50 p-4 rounded-md">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              <div>
                <p class="text-sm font-medium text-gray-700">Created</p>
                <p class="text-sm text-gray-600 mt-1">
                  <%= new Date(warehouse.createdAt).toLocaleString() %>
                </p>
              </div>
              <div>
                <p class="text-sm font-medium text-gray-700">Last Updated</p>
                <p class="text-sm text-gray-600 mt-1">
                  <%= new Date(warehouse.updatedAt).toLocaleString() %>
                </p>
              </div>
            </div>
          </div>
        </div>

        <!-- Form Actions -->
        <div class="flex justify-end space-x-3 pt-6 border-t border-gray-200">
          <a href="/admin/warehouses" class="bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
            Cancel
          </a>
          <button type="submit" class="bg-blue-600 py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
            <i class="fas fa-save mr-2"></i>Update Warehouse
          </button>
        </div>
      </form>
    </div>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const latitudeInput = document.getElementById('latitude');
  const longitudeInput = document.getElementById('longitude');
  const mapPreview = document.getElementById('mapPreview');
  
  // Update map when coordinates change
  [latitudeInput, longitudeInput].forEach(input => {
    input.addEventListener('input', updateMapPreview);
  });
  
  function updateMapPreview() {
    const lat = parseFloat(latitudeInput.value) || 0;
    const lng = parseFloat(longitudeInput.value) || 0;
    
    // Clear previous map
    mapPreview.innerHTML = '';
    
    // Create visual representation
    const mapDiv = document.createElement('div');
    mapDiv.className = 'h-full flex items-center justify-center';
    
    mapDiv.innerHTML = `
      <div class="text-center">
        <div class="relative inline-block">
          <div class="w-32 h-32 ${lat === 0 && lng === 0 ? 'bg-gray-100' : 'bg-blue-100'} rounded-full flex items-center justify-center">
            <i class="fas fa-map-marker-alt text-3xl ${lat === 0 && lng === 0 ? 'text-gray-400' : 'text-red-500'}"></i>
          </div>
          <div class="absolute -bottom-2 left-1/2 transform -translate-x-1/2 bg-white px-3 py-1 rounded-md shadow-sm border border-gray-200">
            <span class="text-sm font-mono">${lat.toFixed(4)}, ${lng.toFixed(4)}</span>
          </div>
        </div>
        <p class="mt-4 text-sm ${lat === 0 && lng === 0 ? 'text-gray-400' : 'text-gray-600'}">
          ${lat === 0 && lng === 0 ? 'Coordinates not set' : `Latitude: ${lat.toFixed(6)}<br>Longitude: ${lng.toFixed(6)}`}
        </p>
      </div>
    `;
    
    mapPreview.appendChild(mapDiv);
  }
  
  // Initialize map preview
  updateMapPreview();
});
</script>