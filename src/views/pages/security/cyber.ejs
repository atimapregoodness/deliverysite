    --primary-color: #0d6efd;
    --secondary-color: #6f42c1;
    --cyber-blue: rgba(13, 110, 253, 0.9);
    --cyber-purple: rgba(111, 66, 193, 0.95);
    --cyber-dark: #0a0e17;
    --cyber-glow: rgba(13, 110, 253, 0.6);
  }

  /* Enhanced Hero with Animated Overlay */
  .hero-section-cyber {
    position: relative;
    background: linear-gradient(135deg, var(--cyber-blue), var(--cyber-purple)),
      url("/assets/images/cybersecurity_bg.avif") center/cover;
    color: white;
    overflow: hidden;
    padding: 2rem 0;
  }

  /* Animated Binary Code Overlay */
  .hero-section-cyber::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-image: linear-gradient(
        0deg,
        transparent 95%,
        rgba(255, 255, 255, 0.05) 100%
      ),
      linear-gradient(90deg, transparent 95%, rgba(255, 255, 255, 0.05) 100%),
      repeating-linear-gradient(
        0deg,
        transparent,
        transparent 2px,
        rgba(255, 255, 255, 0.02) 2px,
        rgba(255, 255, 255, 0.02) 4px
      );
    background-size: 100% 100%, 100% 100%, 100% 20px;
    animation: scanLines 20s linear infinite;
    opacity: 0.4;
    pointer-events: none;
  }

  @keyframes scanLines {
    0% {
      background-position: 0 0;
    }
    100% {
      background-position: 0 100%;
    }
  }

  /* Binary Code Rain Animation */
  .binary-rain {
    position: absolute;
    top: -50px;
    left: 0;
    right: 0;
    height: 100%;
    overflow: hidden;
    pointer-events: none;
    z-index: 1;
  }

  .binary-digit {
    position: absolute;
    color: rgba(255, 255, 255, 0.1);
    font-family: monospace;
    font-size: 1.2rem;
    font-weight: 700;
    animation: binaryFall linear infinite;
  }

  @keyframes binaryFall {
    0% {
      transform: translateY(-100px);
      opacity: 0;
    }
    10% {
      opacity: 0.8;
    }
    90% {
      opacity: 0.8;
    }
    100% {
      transform: translateY(100vh);
      opacity: 0;
    }
  }

  /* Cyber Cards with Glow Effect */
  .cyber-card-enhanced {
    background: rgba(255, 255, 255, 0.05);
    backdrop-filter: blur(15px);
    border: 1px solid rgba(255, 255, 255, 0.15);
    border-radius: 16px;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    overflow: hidden;
  }

  .cyber-card-enhanced::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 3px;
    background: linear-gradient(
      90deg,
      var(--primary-color),
      var(--secondary-color)
    );
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .cyber-card-enhanced:hover {
    background: rgba(255, 255, 255, 0.1);
    transform: translateY(-8px);
    box-shadow: 0 15px 35px rgba(13, 110, 253, 0.15),
      0 0 20px rgba(13, 110, 253, 0.1);
  }

  .cyber-card-enhanced:hover::before {
    opacity: 1;
  }

  /* Cyber Glow Icons */
  .cyber-icon {
    width: 70px;
    height: 70px;
    border-radius: 16px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.75rem;
    color: white;
    margin: 0 auto 1.5rem;
    background: linear-gradient(
      135deg,
      var(--primary-color),
      var(--secondary-color)
    );
    box-shadow: 0 8px 20px rgba(13, 110, 253, 0.4);
    position: relative;
    transition: all 0.3s ease;
  }

  .cyber-icon::after {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    border-radius: 16px;
    background: linear-gradient(
      135deg,
      var(--primary-color),
      var(--secondary-color)
    );
    filter: blur(10px);
    opacity: 0;
    transition: opacity 0.3s ease;
    z-index: -1;
  }

  .cyber-card-enhanced:hover .cyber-icon::after {
    opacity: 0.5;
  }

  /* Threat Level Indicators */
  .threat-level {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    border-radius: 50px;
    font-weight: 600;
    font-size: 0.85rem;
  }

  .threat-critical {
    background: linear-gradient(
      135deg,
      rgba(220, 53, 69, 0.2),
      rgba(220, 53, 69, 0.1)
    );
    color: #dc3545;
  }

  .threat-high {
    background: linear-gradient(
      135deg,
      rgba(255, 193, 7, 0.2),
      rgba(255, 193, 7, 0.1)
    );
    color: #ffc107;
  }

  .threat-medium {
    background: linear-gradient(
