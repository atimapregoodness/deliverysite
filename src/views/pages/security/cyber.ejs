<script>
  // Binary Code Rain Animation
  document.addEventListener("DOMContentLoaded", function () {
    const binaryRain = document.getElementById("binaryRain");
    const binaryChars = ["0", "1"];

    // Create binary digits
    for (let i = 0; i < 50; i++) {
      const digit = document.createElement("div");
      digit.className = "binary-digit";
      digit.textContent =
        binaryChars[Math.floor(Math.random() * binaryChars.length)];
      digit.style.left = Math.random() * 100 + "%";
      digit.style.animationDuration = Math.random() * 10 + 5 + "s";
      digit.style.animationDelay = Math.random() * 5 + "s";
      digit.style.opacity = Math.random() * 0.3 + 0.1;
      binaryRain.appendChild(digit);
    }

    // Animated counters
    const counters = document.querySelectorAll(".counter");
    counters.forEach((counter) => {
      const target = parseFloat(counter.getAttribute("data-target"));
      const increment = target / 100;
      let current = 0;

      const updateCounter = () => {
        if (current < target) {
          current += increment;
          if (current > target) current = target;

          if (target % 1 === 0) {
            counter.textContent = Math.floor(current);
          } else {
            counter.textContent = current.toFixed(1);
          }

          setTimeout(updateCounter, 20);
        }
      };

      // Start when in viewport
      const observer = new IntersectionObserver((entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            updateCounter();
            observer.unobserve(entry.target);
          }
        });
      });

      observer.observe(counter);
    });

    // Simulated threat updates
    const threatBadge = document.querySelector(
      ".cyber-card-enhanced .threat-level"
    );
    if (threatBadge) {
      const threats = [
        { level: "critical", text: "APT29 Active" },
        { level: "high", text: "Emotet Campaign" },
        { level: "medium", text: "Credential Stuffing" },
        { level: "low", text: "Port Scanning" },
      ];

      let currentThreat = 0;
      setInterval(() => {
        threatBadge.className = `threat-level threat-${threats[currentThreat].level}`;
        threatBadge.innerHTML = `<i class="fas fa-bug me-1 text-warning"></i>${threats[currentThreat].text}`;
        currentThreat = (currentThreat + 1) % threats.length;
      }, 8000);
    }

    // Animated threat pulse
    const threatPulse = document.querySelector(".threat-pulse");
    if (threatPulse) {
      threatPulse.style.cssText = `
        width: 8px;
        height: 8px;
        background: #20c997;
        border-radius: 50%;
        animation: pulse 2s infinite;
      `;

      // Add pulse animation
      const style = document.createElement("style");
      style.textContent = `
        @keyframes pulse {
          0% { box-shadow: 0 0 0 0 rgba(32, 201, 151, 0.7); }
          70% { box-shadow: 0 0 0 10px rgba(32, 201, 151, 0); }
          100% { box-shadow: 0 0 0 0 rgba(32, 201, 151, 0); }
        }
      `;
      document.head.appendChild(style);
    }
  });
</script>
