        circle at 20% 80%,
        rgba(13, 110, 253, 0.1) 0%,
        transparent 50%
      ),
      radial-gradient(
        circle at 80% 20%,
        rgba(110, 66, 193, 0.1) 0%,
        transparent 50%
      );
  }

  /* Responsive Adjustments */
  @media (max-width: 768px) {
    .stat-counter {
      font-size: 2.5rem;
    }

    .compliance-grid {
      grid-template-columns: 1fr;
    }

    .floating-element-security {
      display: none;
    }
  }
</style>

