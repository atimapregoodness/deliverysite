  :root {
    --primary-color: #0d6efd;
    --primary-dark: #0b5ed7;
    --secondary-color: #6f42c1;
    --accent-color: #20c997;
    --dark-color: #212529;
    --light-color: #f8f9fa;
    --glass-bg: rgba(255, 255, 255, 0.88);
    --glass-border: rgba(255, 255, 255, 0.25);
    --security-red: #dc3545;
    --security-green: #198754;
    --security-blue: #0d6efd;
    --security-purple: #6f42c1;
  }

  /* Advanced Background Pattern */
  .security-bg {
    background-image: radial-gradient(
        circle at 15% 50%,
        rgba(13, 109, 253, 0.08) 0%,
        transparent 25%
      ),
      radial-gradient(
        circle at 85% 30%,
        rgba(110, 66, 193, 0.06) 0%,
        transparent 25%
      ),
      linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
    background-attachment: fixed;
    position: relative;
    overflow: hidden;
  }

  /* Security Grid Pattern Overlay */
  .security-bg::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-image: linear-gradient(
        rgba(13, 110, 253, 0.03) 1px,
        transparent 1px
      ),
      linear-gradient(90deg, rgba(13, 110, 253, 0.03) 1px, transparent 1px);
    background-size: 40px 40px;
    pointer-events: none;
  }

  /* Animated Shield Background Element */
  .shield-bg-element {
    position: absolute;
    width: 300px;
    height: 300px;
    background: radial-gradient(
      circle,
      rgba(13, 110, 253, 0.05) 0%,
      transparent 70%
    );
    border-radius: 50%;
    top: 10%;
    right: 5%;
    animation: pulse-shield 4s ease-in-out infinite;
    z-index: 0;
  }

  @keyframes pulse-shield {
    0%,
    100% {
      transform: scale(1);
      opacity: 0.5;
    }
    50% {
      transform: scale(1.05);
      opacity: 0.8;
    }
  }

  /* Modern Glass Effect */
  .glass-card {
    background: var(--glass-bg);
    backdrop-filter: blur(15px);
    -webkit-backdrop-filter: blur(15px);
    border: 1px solid var(--glass-border);
    border-radius: 20px;
    box-shadow: 0 15px 35px rgba(0, 0, 0, 0.05), 0 5px 15px rgba(0, 0, 0, 0.03),
      inset 0 1px 0 rgba(255, 255, 255, 0.6);
    transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1),
      box-shadow 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .glass-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1), 0 10px 20px rgba(0, 0, 0, 0.05),
      inset 0 1px 0 rgba(255, 255, 255, 0.8);
  }

  .hero-section-security {
    position: relative;
    background: linear-gradient(135deg, #0d6efd 0%, #6f42c1 100%);
    color: white;
    overflow: hidden;
    padding: 5rem 0;
  }

  .hero-section-security::before {
    content: "";
    position: absolute;
    inset: 0;
    background: 
    /* Base wave layer */ radial-gradient(
        circle at 20% 80%,
        rgba(255, 255, 255, 0.15) 0%,
        transparent 25%
      ),
      radial-gradient(
        circle at 80% 20%,
        rgba(255, 255, 255, 0.1) 0%,
        transparent 25%
      ),
      /* Animated wave layers */
        repeating-linear-gradient(
          45deg,
          transparent,
          transparent 2px,
          rgba(255, 255, 255, 0.03) 2px,
          rgba(255, 255, 255, 0.03) 4px
        ),
      repeating-linear-gradient(
        -45deg,
        transparent,
        transparent 2px,
        rgba(255, 255, 255, 0.05) 2px,
        rgba(255, 255, 255, 0.05) 6px
      );
    opacity: 0.7;
    animation: waveShift 20s linear infinite alternate;
  }

  @keyframes waveShift {
    0% {
      background-position: 0 0, 0 0, 0 0;
    }
    100% {
      background-position: 30px 30px, -30px -30px, 60px 120px;
    }
  }

  /* Security Badges */
  .security-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.6rem 1.2rem;
    border-radius: 50px;
    font-weight: 600;
    font-size: 0.85rem;
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
  }

  .badge-sia {
    background: linear-gradient(
      135deg,
      rgba(32, 201, 151, 0.9),
      rgba(32, 201, 151, 0.7)
    );
  }

  .badge-vetted {
    background: linear-gradient(
      135deg,
      rgba(13, 110, 253, 0.9),
      rgba(13, 110, 253, 0.7)
    );
  }

  .badge-24 {
    background: linear-gradient(
      135deg,
      rgba(108, 117, 125, 0.9),
      rgba(108, 117, 125, 0.7)
    );
  }

  /* Advanced Service Cards */
  .service-card-advanced {
    position: relative;
    overflow: hidden;
    border-radius: 16px;
    height: 100%;
  }

  .service-card-advanced::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(
      90deg,
      var(--primary-color),
      var(--secondary-color)
    );
  }

  .service-icon-advanced {
    width: 70px;
    height: 70px;
    border-radius: 16px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.75rem;
    color: white;
    margin-bottom: 1.5rem;
    background: linear-gradient(
      135deg,
      var(--primary-color),
      var(--secondary-color)
    );
    box-shadow: 0 8px 20px rgba(13, 110, 253, 0.3);
  }

  /* Security Level Indicators */
  .security-level {
    position: relative;
    padding-left: 1.5rem;
    margin-bottom: 1rem;
  }

  .security-level::before {
    content: "";
    position: absolute;
    left: 0;
    top: 0.5rem;
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background: var(--security-green);
  }

  .security-level.critical::before {
    background: var(--security-red);
  }

  .security-level.high::before {
    background: #fd7e14;
  }

  .security-level.medium::before {
    background: #ffc107;
  }

  /* Training Timeline */
  .training-timeline {
    position: relative;
    padding-left: 2rem;
  }

  .training-timeline::before {
    content: "";
    position: absolute;
    left: 0;
    top: 0;
    bottom: 0;
    width: 2px;
    background: linear-gradient(to bottom, var(--primary-color), transparent);
  }

  .timeline-item {
    position: relative;
    padding-bottom: 2rem;
  }

  .timeline-item::before {
    content: "";
    position: absolute;
    left: -2.25rem;
    top: 0;
    width: 12px;
    height: 12px;
    border-radius: 50%;
    background: var(--primary-color);
    border: 3px solid white;
    box-shadow: 0 0 0 3px rgba(13, 110, 253, 0.2);
  }

  /* Stats Counter */
  .stat-counter {
    font-size: 3rem;
    font-weight: 800;
    background: linear-gradient(
      135deg,
      var(--primary-color),
      var(--secondary-color)
    );
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    line-height: 1;
  }

  /* Floating Elements */
  .floating-element-security {
    position: absolute;
    width: 150px;
    height: 150px;
    border-radius: 50%;
    background: radial-gradient(
      circle,
      rgba(13, 110, 253, 0.08) 0%,
      transparent 70%
    );
    pointer-events: none;
    z-index: 0;
  }

  .floating-element-1 {
    top: 15%;
    left: 5%;
    animation: float-security 25s ease-in-out infinite;
  }

  .floating-element-2 {
    bottom: 20%;
    right: 10%;
    animation: float-security 30s ease-in-out infinite reverse;
  }

  @keyframes float-security {
    0%,
    100% {
      transform: translate(0, 0) rotate(0deg);
    }
    25% {
      transform: translate(20px, 20px) rotate(90deg);
    }
    50% {
      transform: translate(0, 40px) rotate(180deg);
    }
    75% {
      transform: translate(-20px, 20px) rotate(270deg);
    }
  }

  /* Security Compliance Grid */
  .compliance-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1.5rem;
  }

  .compliance-item {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1.25rem;
    background: rgba(255, 255, 255, 0.7);
    border-radius: 12px;
    border: 1px solid rgba(13, 110, 253, 0.1);
  }

  .compliance-icon {
    width: 50px;
    height: 50px;
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(
      135deg,
      var(--primary-color),
      var(--secondary-color)
    );
    color: white;
    font-size: 1.25rem;
    flex-shrink: 0;
  }

  /* CTA Section */
  .cta-section-security {
    background: linear-gradient(135deg, #212529, #343a40);
    position: relative;
    overflow: hidden;
  }

  .cta-section-security::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
