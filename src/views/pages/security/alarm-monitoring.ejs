<%- layout('layouts/main') %>
<title>Alarm Monitoring Center | Shield Logistics Security Solutions</title>

<style>
  :root {
    --primary-color: #0d6efd;
    --secondary-color: #6f42c1;
    --monitoring-blue: rgba(13, 110, 253, 0.95);
    --monitoring-purple: rgba(110, 66, 193, 0.92);
    --glass-bg: rgba(255, 255, 255, 0.9);
  }

  /* Animated Network Grid Background */
  .hero-section-monitoring {
    position: relative;
    background: linear-gradient(
      135deg,
      var(--monitoring-blue),
      var(--monitoring-purple)
    );
    color: white;
    overflow: hidden;
    padding: 2rem 0;
  }

  /* Data Grid Network */
  .hero-section-monitoring::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-image: 
      /* Primary grid */ linear-gradient(
        90deg,
        rgba(255, 255, 255, 0.05) 1px,
        transparent 1px
      ),
      linear-gradient(rgba(255, 255, 255, 0.05) 1px, transparent 1px),
      /* Secondary diagonal grid */
        repeating-linear-gradient(
          45deg,
          transparent,
          transparent 20px,
          rgba(255, 255, 255, 0.02) 20px,
          rgba(255, 255, 255, 0.02) 40px
        ),
      /* Signal pathways */
        repeating-linear-gradient(
          135deg,
          transparent,
          transparent 15px,
          rgba(255, 255, 255, 0.03) 15px,
          rgba(255, 255, 255, 0.03) 30px
        );
    background-size: 60px 60px, 60px 60px, 80px 80px, 50px 50px;
    animation: gridFlow 40s linear infinite;
    opacity: 0.5;
  }

  @keyframes gridFlow {
    0% {
      background-position: 0 0, 0 0, 0 0, 0 0;
    }
    100% {
      background-position: 120px 60px, 60px 120px, 80px 80px, 50px 50px;
    }
  }

  /* Animated Signal Dots */
  .hero-section-monitoring::after {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-image: radial-gradient(
        circle at 15% 25%,
        rgba(255, 255, 255, 0.6) 0%,
        transparent 3%
      ),
      radial-gradient(
        circle at 70% 85%,
        rgba(255, 255, 255, 0.5) 0%,
        transparent 4%
      ),
      radial-gradient(
        circle at 85% 35%,
        rgba(255, 255, 255, 0.4) 0%,
        transparent 2.5%
      ),
      radial-gradient(
        circle at 25% 75%,
        rgba(255, 255, 255, 0.5) 0%,
        transparent 3.5%
      ),
      radial-gradient(
        circle at 55% 45%,
        rgba(255, 255, 255, 0.3) 0%,
        transparent 2%
      );
    animation: signalPulse 3s ease-in-out infinite alternate;
  }

  @keyframes signalPulse {
    0% {
      opacity: 0.2;
      transform: scale(1);
    }
    100% {
      opacity: 0.6;
      transform: scale(1.02);
    }
  }

  /* Scanning Line Animation */
  .scan-line {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 2px;
    background: linear-gradient(
      90deg,
      transparent,
      rgba(255, 255, 255, 0.8),
      rgba(255, 255, 255, 0.8),
      transparent
    );
    animation: scan 5s linear infinite;
    z-index: 2;
  }

  @keyframes scan {
    0% {
      top: 0%;
    }
    100% {
      top: 100%;
    }
  }

  /* Signal Path Animation */
  .signal-path {
    position: absolute;
    width: 2px;
    height: 100px;
    background: linear-gradient(
      to bottom,
      transparent,
      rgba(255, 255, 255, 0.8),
      transparent
    );
    top: -100px;
    animation: signalTransmit 8s infinite ease-in-out;
  }

  .signal-path-1 {
    left: 20%;
    animation-delay: 0s;
  }
  .signal-path-2 {
    left: 50%;
    animation-delay: 2s;
  }
  .signal-path-3 {
    left: 80%;
    animation-delay: 4s;
  }

  @keyframes signalTransmit {
    0% {
      top: -100px;
      opacity: 0;
    }
    10% {
      opacity: 1;
    }
    90% {
      opacity: 1;
    }
    100% {
      top: 100%;
      opacity: 0;
    }
  }

  .glass-card {
    background: var(--glass-bg);
    backdrop-filter: blur(20px);
    border: 1px solid var(--glass-border);
    border-radius: 20px;
    box-shadow: var(--glass-shadow);
  }

  /* Modern Monitoring Center Card */
  .monitoring-center-card {
    position: relative;
    overflow: hidden;
    border-radius: 20px;
    background: var(--glass-bg);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
  }

  .monitoring-center-card::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(
      90deg,
      var(--primary-color),
      var(--secondary-color)
    );
  }

  /* Status Indicator */
  .status-indicator {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1.25rem;
    border-radius: 50px;
    font-weight: 600;
    background: rgba(255, 255, 255, 0.15);
    backdrop-filter: blur(5px);
    border: 1px solid rgba(255, 255, 255, 0.2);
  }

  .status-indicator::before {
    content: "";
    width: 10px;
    height: 10px;
    border-radius: 50%;
    background: #20c997;
    animation: statusPulse 2s infinite;
  }

  @keyframes statusPulse {
    0%,
    100% {
      opacity: 1;
      transform: scale(1);
    }
    50% {
      opacity: 0.6;
      transform: scale(1.2);
    }
  }

  /* Stats Cards */
  .stat-card {
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.15);
    border-radius: 16px;
    padding: 1.5rem;
    transition: transform 0.3s ease;
  }

  .stat-card:hover {
    transform: translateY(-5px);
    background: rgba(255, 255, 255, 0.15);
  }

  /* Gradient Badges */
  .badge-monitoring {
    background: linear-gradient(
      135deg,
      rgba(13, 110, 253, 0.2),
      rgba(110, 66, 193, 0.2)
    );
    color: white;
    font-weight: 600;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .hero-section-monitoring {
      padding: 3rem 0;
    }

    .signal-path {
      display: none;
    }
  }
</style>

