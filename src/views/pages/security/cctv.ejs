<script>
  document.addEventListener("DOMContentLoaded", function () {
    // Animated camera indicators
    const cameras = document.querySelectorAll(".camera-indicator");
    setInterval(() => {
      cameras.forEach((cam) => {
        const delay = Math.random() * 1000;
        setTimeout(() => {
          cam.style.opacity = "0.8";
          cam.style.transform = "scale(1.3)";
          setTimeout(() => {
            cam.style.opacity = "0.3";
            cam.style.transform = "scale(1)";
          }, 300);
        }, delay);
      });
    }, 3000);

    // Animated camera feed status
    const statusBadge = document.querySelector(".camera-feed-preview .badge");
    if (statusBadge) {
      setInterval(() => {
        if (statusBadge.classList.contains("bg-success")) {
          statusBadge.classList.remove("bg-success");
          statusBadge.classList.add("bg-danger");
          statusBadge.textContent = "PAUSED";
          setTimeout(() => {
            statusBadge.classList.remove("bg-danger");
            statusBadge.classList.add("bg-success");
            statusBadge.textContent = "REC";
          }, 1000);
        }
      }, 15000);
    }

    // Storage usage animation
    const storageElement = document.querySelector(".glass-card .fw-bold");
    if (storageElement && storageElement.textContent.includes("%")) {
      let usage = 42;
      setInterval(() => {
        usage = 42 + Math.floor(Math.random() * 5);
        storageElement.textContent = usage + "%";
      }, 10000);
    }
  });
</script>
