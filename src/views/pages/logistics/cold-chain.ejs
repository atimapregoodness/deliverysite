<style>
  .hero-section {
    background: linear-gradient(
        135deg,
        rgba(32, 201, 151, 0.92) 0%,
        rgba(0, 150, 199, 0.95) 100%
      ),
      url("/assets/images/cover_1.avif") center/cover;
    color: white;
    position: relative;
    overflow: hidden;
  }

  .temperature-gradient {
    background: linear-gradient(135deg, #1a2980 0%, #26d0ce 100%);
    color: white;
    border-radius: 16px;
    padding: 2rem;
  }

  .temp-range {
    height: 12px;
    border-radius: 6px;
    background: linear-gradient(90deg, #1a2980 0%, #26d0ce 100%);
    position: relative;
    margin: 2rem 0;
  }

  .temp-marker {
    position: absolute;
    top: -20px;
    transform: translateX(-50%);
    font-size: 0.85rem;
    font-weight: 600;
  }

  .temp-indicator {
    position: absolute;
    width: 24px;
    height: 24px;
    border-radius: 50%;
    background: white;
    border: 3px solid #20c997;
    top: -6px;
    transform: translateX(-50%);
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
  }

  .monitoring-card {
    background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
    border: 1px solid rgba(32, 201, 151, 0.2);
    border-radius: 16px;
    transition: all 0.3s ease;
  }

  .monitoring-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 12px 24px rgba(32, 201, 151, 0.15);
  }

  .sensor-status {
    width: 16px;
    height: 16px;
    border-radius: 50%;
    display: inline-block;
    margin-right: 8px;
  }

  .status-active {
    background: linear-gradient(135deg, #00b09b, #96c93d);
    box-shadow: 0 0 10px rgba(0, 176, 155, 0.5);
  }

  .status-warning {
    background: linear-gradient(135deg, #f46b45, #eea849);
    box-shadow: 0 0 10px rgba(244, 107, 69, 0.5);
  }

  .status-alert {
    background: linear-gradient(135deg, #ff416c, #ff4b2b);
    box-shadow: 0 0 10px rgba(255, 65, 108, 0.5);
  }

  .compliance-badge {
    background: rgba(32, 201, 151, 0.1);
    border: 2px solid #20c997;
    border-radius: 12px;
    padding: 1.5rem;
    height: 100%;
  }

  .facility-card {
    border-radius: 16px;
    overflow: hidden;
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease;
  }

  .facility-card:hover {
    transform: translateY(-8px);
  }

  .tech-badge {
    background: linear-gradient(135deg, #1a2980 0%, #26d0ce 100%);
    color: white;
    padding: 8px 20px;
    border-radius: 20px;
    font-size: 0.9rem;
    font-weight: 600;
  }

  .data-stream {
    background: #1a1a2e;
    border-radius: 16px;
    color: white;
    font-family: "Monaco", "Courier New", monospace;
    font-size: 0.9rem;
    padding: 1.5rem;
    overflow: hidden;
  }

  .data-line {
    padding: 4px 0;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    animation: slideIn 0.5s ease-out;
  }

  @keyframes slideIn {
    from {
      opacity: 0;
      transform: translateX(-10px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  .cta-section {
    background: linear-gradient(135deg, #1a2980 0%, #26d0ce 100%);
    color: white;
    border-radius: 20px;
    position: relative;
    overflow: hidden;
  }

  .cta-section::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(90deg, #20c997, #00c9ff);
  }

  .temperature-alert {
    background: rgba(255, 65, 108, 0.1);
    border: 2px solid #ff416c;
    border-radius: 12px;
    padding: 1.5rem;
    animation: pulse 2s infinite;
  }

  @keyframes pulse {
    0% {
      box-shadow: 0 0 0 0 rgba(255, 65, 108, 0.4);
    }
    70% {
      box-shadow: 0 0 0 10px rgba(255, 65, 108, 0);
    }
    100% {
      box-shadow: 0 0 0 0 rgba(255, 65, 108, 0);
    }
  }

  .quality-indicator {
    width: 100px;
    height: 100px;
    border-radius: 50%;
    background: conic-gradient(
      #20c997 0% 94%,
      #ffc107 94% 99%,
      #ff416c 99% 100%
    );
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 1rem;
  }

  .quality-inner {
    width: 70px;
    height: 70px;
    border-radius: 50%;
    background: white;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: bold;
    font-size: 1.5rem;
  }
