<script>
  document.addEventListener("DOMContentLoaded", function () {
    // Animated freight indicators
    const indicators = document.querySelectorAll(".freight-indicator");
    indicators.forEach((indicator) => {
      indicator.addEventListener("animationiteration", () => {
        // Randomize animation slightly on each iteration
        const randomX = Math.random() * 100 - 50;
        const randomY = Math.random() * 100 - 50;
        indicator.style.transform = `translate(${randomX}px, ${randomY}px)`;
      });
    });

    // Simulate live shipment updates
    const liveBadge = document.querySelector(".logistics-map .badge");
    if (liveBadge && liveBadge.textContent.includes("Ships Active")) {
      setInterval(() => {
        const ships = Math.floor(Math.random() * 10) + 240;
        const trucks = Math.floor(Math.random() * 50) + 850;
        liveBadge.textContent = `${ships} Ships Active`;
        liveBadge.nextElementSibling.textContent = `${trucks} Trucks En Route`;
      }, 15000);
    }

    // Animated transit time update
    const transitElement = document.querySelector(".glass-card .fw-bold");
    if (transitElement && transitElement.textContent.includes("Days")) {
      const times = ["2-4 Days", "3-5 Days", "4-6 Days", "5-7 Days"];
      let currentIndex = 0;
      setInterval(() => {
        transitElement.innerHTML = `<i class="fas fa-clock me-1"></i>${times[currentIndex]}`;
        currentIndex = (currentIndex + 1) % times.length;
      }, 10000);
    }
  });
</script>
