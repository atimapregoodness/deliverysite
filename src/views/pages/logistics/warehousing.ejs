    color: #20c997;
  }

  .temp-ambient {
    background: rgba(255, 193, 7, 0.15);
    color: #ffc107;
  }

  @media (max-width: 768px) {
    .hero-section-warehouse {
      padding: 3rem 0;
    }

    .pallet-indicator {
      display: none;
    }

    .warehouse-icon {
      width: 60px;
      height: 60px;
      font-size: 1.5rem;
    }
  }
</style>

