    border-radius: 16px;
    border: 1px solid rgba(13, 110, 253, 0.1);
    transition: all 0.3s ease;
    overflow: hidden;
  }

  .chain-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 20px 40px rgba(13, 110, 253, 0.15) !important;
    border-color: #0d6efd;
  }

  .chain-icon {
    width: 80px;
    height: 80px;
    border-radius: 50%;
    background: linear-gradient(135deg, #0d6efd 0%, #00c9ff 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 1.5rem;
    color: white;
    font-size: 2rem;
  }

  .dashboard-section {
    background: #0000005e;
    backdrop-filter: blur(10px);
    --webkit-backdrop-filter: blur(10px);
    border-radius: 16px;
    color: #f0f2ff;
    overflow: hidden;
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
  }

  .dashboard-header {
    background: rgba(255, 255, 255, 0.1);
    padding: 1.5rem;
    border-bottom: 1px solid rgba(255, 255, 255, 0.2);
  }

  .metric-card {
    background: rgba(255, 255, 255, 0.05);
    border-radius: 12px;
    padding: 1.5rem;
    border: 1px solid rgba(255, 255, 255, 0.1);
  }

  .metric-value {
    font-size: 2.5rem;
    font-weight: bold;
    background: linear-gradient(135deg, #0d6efd, #00c9ff);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .tech-badge {
    background: linear-gradient(135deg, #0d6efd 0%, #00c9ff 100%);
    color: white;
    padding: 8px 20px;
    border-radius: 20px;
    font-size: 0.9rem;
    font-weight: 600;
  }

  .process-flow {
    position: relative;
    padding: 2rem 0;
  }

  .flow-step {
    text-align: center;
    padding: 1.5rem;
    position: relative;
    z-index: 2;
  }

  .flow-step::before {
    content: "";
    position: absolute;
    top: 0;
    left: 50%;
    width: 60px;
    height: 60px;
    background: linear-gradient(135deg, #0d6efd 0%, #00c9ff 100%);
    border-radius: 50%;
    transform: translateX(-50%);
    z-index: -1;
  }

  .flow-step i {
    font-size: 1.5rem;
    color: white;
    margin-bottom: 1rem;
  }

  .flow-line {
    position: absolute;
    top: 30px;
    left: 0;
    right: 0;
    height: 3px;
    background: linear-gradient(90deg, #0d6efd, #00c9ff);
    z-index: 1;
  }

  .ai-panel {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    border-radius: 16px;
    padding: 2rem;
  }

  .integration-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(120px, 1fr));
    gap: 1rem;
    padding: 1rem;
    background: rgba(255, 255, 255, 0.05);
    border-radius: 12px;
  }

  .integration-item {
    background: white;
    border-radius: 8px;
    padding: 1rem;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: transform 0.3s ease;
  }

  .integration-item:hover {
    transform: scale(1.05);
  }

  .integration-item img {
    max-height: 30px;
    max-width: 100%;
  }

  .alert-panel {
    background: linear-gradient(135deg, #ff416c 0%, #ff4b2b 100%);
    color: white;
    border-radius: 12px;
    padding: 1.5rem;
    animation: pulse 2s infinite;
  }

  @keyframes pulse {
    0% {
      box-shadow: 0 0 0 0 rgba(255, 65, 108, 0.4);
    }
    70% {
      box-shadow: 0 0 0 10px rgba(255, 65, 108, 0);
    }
    100% {
      box-shadow: 0 0 0 0 rgba(255, 65, 108, 0);
    }
  }

  .timeline {
    position: relative;
    padding-left: 30px;
  }

  .timeline::before {
    content: "";
    position: absolute;
    left: 0;
    top: 0;
    bottom: 0;
    width: 2px;
    background: linear-gradient(180deg, #0d6efd, #00c9ff);
  }

  .timeline-item {
    position: relative;
    padding-bottom: 2rem;
  }

  .timeline-item::before {
    content: "";
    position: absolute;
    left: -34px;
    top: 0;
    width: 12px;
    height: 12px;
    border-radius: 50%;
    background: #0d6efd;
    border: 3px solid white;
    box-shadow: 0 0 0 3px #0d6efd;
  }

  .kpi-indicator {
    width: 100px;
    height: 100px;
    border-radius: 50%;
    background: conic-gradient(
      #20c997 0% 85%,
      #ffc107 85% 95%,
      #ff416c 95% 100%
