  const backToTopButton = document.getElementById("back-to-top");

  window.addEventListener("scroll", () => {
    if (window.scrollY > 300) {
      backToTopButton.style.display = "block";
    } else {
      backToTopButton.style.display = "none";
    }
  });

  // Form submission
  const trackButton = document.querySelector(".btn-gradient");
  const trackingInput = document.querySelector(".tracking-input");

  trackButton.addEventListener("click", () => {
    const trackingId = trackingInput.value.trim();
    if (trackingId) {
      alert(
        `Tracking package: ${trackingId}\n\nIn a production environment, this would redirect to tracking details.`
      );
      // window.location.href = `/tracking/${trackingId}`;
    } else {
      alert("Please enter a tracking ID");
      trackingInput.focus();
    }
  });

  trackingInput.addEventListener("keypress", (e) => {
    if (e.key === "Enter") {
      trackButton.click();
    }
  });

  // Card hover effects
  document.querySelectorAll(".card-hover").forEach((card) => {
    card.addEventListener("mouseenter", () => {
      card.style.transition = "all 0.3s ease";
