<%- layout('layouts/main') %>
<title>Contact Us | Shield Logistics</title>

<style>
  :root {
    --primary-color: #0d6efd;
    --primary-dark: #0b5ed7;
    --secondary-color: #6f42c1;
    --accent-color: #20c997;
    --dark-color: #212529;
    --light-color: #f8f9fa;
    --gray-color: #6c757d;
  }

  .hero-section {
    background: linear-gradient(
        rgba(13, 110, 253, 0.92),
        rgba(111, 66, 193, 0.95)
      ),
      url("https://images.unsplash.com/photo-1560472354-b33ff0c44a43?auto=format&fit=crop&q=80&w=2070")
        center/cover;
    color: white;
    padding: 100px 0;
  }

  .contact-card {
    border: none;
    border-radius: 16px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
    transition: all 0.3s ease;
    overflow: hidden;
  }

  .contact-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 20px 40px rgba(13, 110, 253, 0.15);
  }

  .contact-icon {
    width: 70px;
    height: 70px;
    border-radius: 16px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.8rem;
    color: white;
    margin-bottom: 1.5rem;
  }

  .form-control-custom {
    border: 2px solid #e9ecef;
    border-radius: 12px;
    padding: 1rem 1.25rem;
    font-weight: 500;
    transition: all 0.3s ease;
  }

  .form-control-custom:focus {
    border-color: var(--primary-color);
    box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.15);
  }

  .btn-submit {
    background: linear-gradient(
      135deg,
      var(--primary-color),
      var(--secondary-color)
    );
    border: none;
    border-radius: 12px;
    padding: 1rem 2.5rem;
    font-weight: 600;
    font-size: 1.1rem;
    letter-spacing: 0.5px;
    transition: all 0.3s ease;
  }

  .btn-submit:hover {
    background: linear-gradient(135deg, var(--primary-dark), #5a32a3);
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(13, 110, 253, 0.25);
  }

  .map-container {
    border-radius: 16px;
    overflow: hidden;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    height: 400px;
  }

  .map-container iframe {
    width: 100%;
    height: 100%;
    border: none;
  }

  .office-card {
    background: white;
    border-radius: 16px;
    padding: 2rem;
    box-shadow: 0 5px 20px rgba(0, 0, 0, 0.05);
    transition: all 0.3s ease;
  }

  .office-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 15px 30px rgba(0, 0, 0, 0.1);
  }

  .badge-pill {
    padding: 0.5rem 1.25rem;
    border-radius: 50px;
    font-weight: 600;
    font-size: 0.9rem;
  }

  .emergency-badge {
    background: linear-gradient(135deg, #dc3545, #b02a37);
    color: white;
    animation: pulse 2s infinite;
  }

  @keyframes pulse {
    0% {
      box-shadow: 0 0 0 0 rgba(220, 53, 69, 0.4);
    }
    70% {
      box-shadow: 0 0 0 10px rgba(220, 53, 69, 0);
    }
    100% {
      box-shadow: 0 0 0 0 rgba(220, 53, 69, 0);
    }
  }

  .social-icon {
    width: 45px;
    height: 45px;
    border-radius: 12px;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    margin-right: 0.75rem;
    color: white;
    transition: all 0.3s ease;
  }

  .social-icon:hover {
    transform: translateY(-3px);
    opacity: 0.9;
  }

  .working-hours {
    background: linear-gradient(
      135deg,
      rgba(13, 110, 253, 0.05),
      rgba(32, 201, 151, 0.05)
    );
    border-radius: 12px;
    padding: 1.5rem;
  }

  .feature-badge {
    background: rgba(32, 201, 151, 0.1);
    color: #20c997;
    padding: 0.5rem 1rem;
    border-radius: 50px;
    font-weight: 600;
    font-size: 0.85rem;
  }

  @media (max-width: 768px) {
    .hero-section {
      padding: 60px 0;
    }

    .display-4 {
      font-size: 2.5rem;
    }

    .contact-icon {
      width: 60px;
      height: 60px;
      font-size: 1.5rem;
    }
  }
