    border-radius: 16px;
    padding: 2rem;
    height: 100%;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
  }

  .cert-badge::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(90deg, #6c757d, #adb5bd);
  }

  .cert-badge:hover {
    transform: translateY(-8px);
    box-shadow: 0 20px 40px rgba(108, 117, 125, 0.15);
    border-color: #6c757d;
  }

  .cert-icon {
    width: 80px;
    height: 80px;
    border-radius: 50%;
    background: linear-gradient(135deg, #6c757d 0%, #495861 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 1.5rem;
    color: white;
    font-size: 2rem;
  }

  .category-badge {
    background: linear-gradient(135deg, #6c757d 0%, #495861 100%);
    color: white;
    padding: 8px 20px;
    border-radius: 20px;
    font-size: 0.9rem;
    font-weight: 600;
    display: inline-block;
    margin-bottom: 1rem;
  }

  .compliance-dashboard {
    background: linear-gradient(135deg, #1a1a2e 0%, #16213e 100%);
    color: white;
    border-radius: 20px;
    overflow: hidden;
    position: relative;
  }

  .compliance-dashboard::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(90deg, #6c757d, #adb5bd);
  }

  .dashboard-header {
    background: rgba(255, 255, 255, 0.1);
    padding: 1.5rem;
    border-bottom: 1px solid rgba(255, 255, 255, 0.2);
  }

  .compliance-metric {
    text-align: center;
    padding: 2rem;
    border-right: 1px solid rgba(255, 255, 255, 0.1);
  }

  .compliance-metric:last-child {
    border-right: none;
  }

  .metric-value {
    font-size: 2.5rem;
    font-weight: bold;
    background: linear-gradient(135deg, #6c757d, #adb5bd);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .audit-timeline {
    position: relative;
    padding-left: 30px;
  }

  .audit-timeline::before {
    content: "";
    position: absolute;
    left: 0;
    top: 0;
    bottom: 0;
    width: 3px;
    background: linear-gradient(180deg, #6c757d, #adb5bd);
  }

  .audit-item {
    position: relative;
    padding-bottom: 2rem;
  }

  .audit-item::before {
    content: "";
    position: absolute;
    left: -34px;
    top: 0;
    width: 12px;
    height: 12px;
    border-radius: 50%;
    background: #6c757d;
    border: 3px solid white;
    box-shadow: 0 0 0 3px #6c757d;
  }

  .regulatory-badge {
    background: rgba(13, 110, 253, 0.1);
    border: 2px solid #0d6efd;
    border-radius: 12px;
    padding: 1.5rem;
    height: 100%;
  }

  .certification-flow {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 3rem 0;
    position: relative;
  }

  .flow-step {
    text-align: center;
    position: relative;
    z-index: 2;
  }

  .flow-step-number {
    width: 60px;
    height: 60px;
    border-radius: 50%;
    background: linear-gradient(135deg, #6c757d 0%, #495861 100%);
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.5rem;
    font-weight: bold;
    margin: 0 auto 1rem;
  }

  .flow-line {
    position: absolute;
    top: 30px;
    left: 10%;
    right: 10%;
    height: 3px;
    background: linear-gradient(90deg, #6c757d, #adb5bd);
    z-index: 1;
  }

