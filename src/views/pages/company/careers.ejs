<%- layout('layouts/main') %>
<title>Careers | Shield Logistics</title>

<style>
  .hero-section {
    background: linear-gradient(rgba(25, 135, 84, 0.9), rgba(25, 135, 84, 0.95)),
      url("https://images.unsplash.com/photo-1581578731540-c7b5d436a3a6?auto=format&fit=crop&q=80&w=2070")
