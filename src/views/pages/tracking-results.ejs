<script>
  // Configuration
  const mapboxToken = "<%= mapboxToken %>";
  const packageData = <%- JSON.stringify(package) %>;

  // Get coordinates - handle different possible data structures
  let warehouseCoords = [-0.1278, 51.5074]; // London as default fallback
  let deliveryCoords = [-0.1276, 51.5072]; // Slightly different as default

  // Try to extract warehouse coordinates
  if (packageData.warehouse?.location?.coordinates) {
    warehouseCoords = packageData.warehouse.location.coordinates;
  } else if (packageData.warehouse?.coordinates) {
    warehouseCoords = packageData.warehouse.coordinates;
  } else if (packageData.sender?.address?.coordinates?.coordinates) {
    warehouseCoords = packageData.sender.address.coordinates.coordinates;
  } else if (packageData.pickupAddress?.coordinates) {
    warehouseCoords = packageData.pickupAddress.coordinates;
  }

  // Try to extract delivery coordinates
  if (packageData.receiver?.address?.coordinates?.coordinates) {
    deliveryCoords = packageData.receiver.address.coordinates.coordinates;
  } else if (packageData.deliveryAddress?.coordinates) {
    deliveryCoords = packageData.deliveryAddress.coordinates;
  }

  // Map state
  let map = null;
  let routeCoordinates = [];
  let vehicleMarker = null;
  let markers = [];
  let animationId = null;
  let trafficVisible = true;
  let vehicleInfoVisible = false;
  let currentProgress = packageData.trackingData?.vehicleProgress || 0;
  let currentSpeed = packageData.trackingData?.speed || 50;
  let totalRouteDistance = packageData.route?.totalDistance ? packageData.route.totalDistance / 1000 : 0;
  let directDistance = 0;

  // Initialize Map - FIXED VERSION
  function initMap() {
    console.log('Initializing map with token:', mapboxToken ? 'Token exists' : 'No token');

    if (!mapboxToken || mapboxToken === '') {
      console.error('Mapbox token is missing!');
      showFallbackMap();
      return;
    }

    mapboxgl.accessToken = mapboxToken;

    try {
      map = new mapboxgl.Map({
        container: 'map',
        style: 'mapbox://styles/mapbox/streets-v11',
        center: warehouseCoords,
        zoom: 12,
        attributionControl: false
      });

      // Add navigation controls
      map.addControl(new mapboxgl.NavigationControl({
        showCompass: true,
        showZoom: true
      }), 'top-right');

      map.addControl(new mapboxgl.AttributionControl({
        compact: true
      }), 'bottom-right');

      // When map loads
      map.on('load', function() {
        console.log('Map loaded successfully');
        initializeMapFeatures();
      });

      // Error handling
      map.on('error', function(e) {
        console.error('Map error:', e.error);
        showFallbackMap();
      });

    } catch (error) {
      console.error('Failed to initialize map:', error);
      showFallbackMap();
    }
  }

  // Initialize map features
  async function initializeMapFeatures() {
    try {
      // First, add basic markers
      addBasicMarkers();

      // Calculate direct distance
      if (isValidCoordinates(warehouseCoords) && isValidCoordinates(deliveryCoords)) {
        directDistance = calculateDirectDistance(warehouseCoords, deliveryCoords);
        updateDirectDistanceDisplay(directDistance);
      }

      // Try to get route
      if (packageData.route?.geometry?.coordinates) {
        // Use existing route geometry if available
        routeCoordinates = packageData.route.geometry.coordinates;
        drawRoute(packageData.route.geometry);
      } else {
        // Generate route
        const routeGeometry = await generateRoute();
        if (routeGeometry) {
          routeCoordinates = routeGeometry.coordinates;
          drawRoute(routeGeometry);
        } else {
          // Draw straight line as fallback
          drawStraightLineRoute();
        }
      }

      // Calculate route distance
      if (routeCoordinates.length > 0) {
        const routeDistance = turf.length(turf.lineString(routeCoordinates), { units: 'kilometers' });
        totalRouteDistance = routeDistance;
        updateDistanceDisplay(routeDistance);
      }

      // Add vehicle marker
      addVehicleMarker();

      // Add waypoints if available
      if (packageData.trackingData?.waypoints) {
        addWaypointMarkers();
      }

      // Fit map to show everything
      fitMapToRoute();

      // Start animation if in transit
      if (packageData.status === 'in_transit' && currentProgress < 100) {
        setTimeout(() => {
          startVehicleAnimation();
        }, 1000);
      }

      // Update vehicle position indicator
      updateVehiclePositionIndicator();

    } catch (error) {
      console.error('Error initializing map features:', error);
      showFallbackRoute();
    }
  }

  // Generate route using Mapbox Directions API
  async function generateRoute() {
    try {
      if (!isValidCoordinates(warehouseCoords) || !isValidCoordinates(deliveryCoords)) {
        throw new Error('Invalid coordinates');
      }

      const profile = 'mapbox/driving';
      const coordinates = `${warehouseCoords[0]},${warehouseCoords[1]};${deliveryCoords[0]},${deliveryCoords[1]}`;
      const url = `https://api.mapbox.com/directions/v5/${profile}/${coordinates}?geometries=geojson&overview=full&access_token=${mapboxToken}`;

      console.log('Fetching route from:', url);

      const response = await fetch(url);
      const data = await response.json();

      if (data.routes && data.routes.length > 0) {
        return data.routes[0].geometry;
      } else {
        throw new Error('No route found');
      }
    } catch (error) {
      console.error('Route generation failed:', error);
      return null;
    }
  }

  // Add basic markers
  function addBasicMarkers() {
    // Clear existing markers
    markers.forEach(marker => marker.remove());
    markers = [];

    // Create custom marker elements
    const warehouseMarkerEl = createMarkerElement('warehouse');
    const deliveryMarkerEl = createMarkerElement('delivery');

    // Add warehouse marker
    const warehouseMarker = new mapboxgl.Marker(warehouseMarkerEl)
      .setLngLat(warehouseCoords)
      .setPopup(createPopup('Pickup Location', packageData.warehouse?.name || 'Warehouse'))
      .addTo(map);
    markers.push(warehouseMarker);

    // Add delivery marker
    const deliveryMarker = new mapboxgl.Marker(deliveryMarkerEl)
      .setLngLat(deliveryCoords)
      .setPopup(createPopup('Delivery Location', packageData.receiver?.name || 'Recipient'))
      .addTo(map);
    markers.push(deliveryMarker);
  }

  // Create marker element
  function createMarkerElement(type) {
    const el = document.createElement('div');
    el.className = `map-marker ${type}-marker`;

    if (type === 'warehouse') {
      el.innerHTML = '<i class="fas fa-warehouse"></i>';
    } else if (type === 'delivery') {
      el.innerHTML = '<i class="fas fa-flag-checkered"></i>';
    } else if (type === 'vehicle') {
      el.innerHTML = '<i class="fas fa-truck"></i>';
    }

    return el;
  }

  // Create popup
  function createPopup(title, content) {
    return new mapboxgl.Popup({ offset: 25 })
      .setHTML(`
        <div class="p-2">
          <h6 class="fw-bold mb-1">${title}</h6>
          <p class="mb-0 small">${content}</p>
        </div>
      `);
  }

  // Draw route on map
  function drawRoute(geometry) {
    // Add route source
    map.addSource('route', {
      type: 'geojson',
      data: {
        type: 'Feature',
        geometry: geometry
      }
    });

    // Route line
    map.addLayer({
      id: 'route-line',
      type: 'line',
      source: 'route',
      layout: {
        'line-join': 'round',
        'line-cap': 'round'
      },
      paint: {
        'line-color': '#667eea',
        'line-width': 4,
        'line-opacity': 0.7
      }
    });
  }

  // Draw straight line as fallback route
  function drawStraightLineRoute() {
    routeCoordinates = [warehouseCoords, deliveryCoords];

    map.addSource('route', {
      type: 'geojson',
      data: {
        type: 'Feature',
        geometry: {
          type: 'LineString',
          coordinates: routeCoordinates
        }
      }
    });

    map.addLayer({
      id: 'route-line',
      type: 'line',
      source: 'route',
      layout: {
        'line-join': 'round',
        'line-cap': 'round'
      },
      paint: {
        'line-color': '#94a3b8',
        'line-width': 3,
        'line-opacity': 0.5,
        'line-dasharray': [2, 2]
      }
    });
  }

  // Add vehicle marker
  function addVehicleMarker() {
    const currentPosition = calculateCurrentPosition();

    const vehicleMarkerEl = createMarkerElement('vehicle');
    vehicleMarker = new mapboxgl.Marker(vehicleMarkerEl)
      .setLngLat(currentPosition)
      .addTo(map);

    // Make clickable
    vehicleMarkerEl.addEventListener('click', () => {
      toggleVehicleInfo();
    });
  }

  // Calculate current vehicle position
  function calculateCurrentPosition() {
    if (!routeCoordinates.length || currentProgress <= 0) {
      return warehouseCoords;
    }

    if (currentProgress >= 100) {
      return deliveryCoords;
    }

    try {
      if (routeCoordinates.length < 2) {
        return warehouseCoords;
      }

      // Simple linear interpolation
      const progressRatio = currentProgress / 100;
      const index = Math.floor((routeCoordinates.length - 1) * progressRatio);
      const nextIndex = Math.min(index + 1, routeCoordinates.length - 1);

      const coord1 = routeCoordinates[index];
      const coord2 = routeCoordinates[nextIndex];

      if (!coord1 || !coord2) {
        return warehouseCoords;
      }

      const remainingProgress = (progressRatio * (routeCoordinates.length - 1)) - index;

      return [
        coord1[0] + (coord2[0] - coord1[0]) * remainingProgress,
        coord1[1] + (coord2[1] - coord1[1]) * remainingProgress
      ];
    } catch (error) {
      console.error('Position calculation error:', error);
      return warehouseCoords;
    }
  }

  // Start vehicle animation
  function startVehicleAnimation() {
    if (!routeCoordinates.length || currentProgress >= 100) return;

    if (animationId) {
      cancelAnimationFrame(animationId);
    }

    const startTime = Date.now();
    const startProgress = currentProgress;
    const duration = 30000; // 30 seconds for full animation

    function animate() {
      const elapsed = Date.now() - startTime;
      const progress = Math.min(elapsed / duration, 1);
      currentProgress = startProgress + (100 - startProgress) * progress;

      // Update vehicle position
      const currentPosition = calculateCurrentPosition();
      vehicleMarker.setLngLat(currentPosition);

      // Update UI
      updateAllProgressUI(currentProgress);

      if (progress < 1) {
        animationId = requestAnimationFrame(animate);
      } else {
        currentProgress = 100;
        updateAllProgressUI(100);
      }
    }

    animationId = requestAnimationFrame(animate);
  }

  // Update all progress UI
  function updateAllProgressUI(progress) {
    // Update progress bar
    const progressFill = document.getElementById('progressFill');
    if (progressFill) {
      progressFill.style.width = `${progress}%`;
    }

    // Update percentage
    const progressPercentage = document.getElementById('progressPercentage');
    if (progressPercentage) {
      progressPercentage.textContent = `${Math.round(progress)}%`;
    }

    // Update distances
    updateDistanceDisplay(progress);

    // Update vehicle position indicator
    updateVehiclePositionIndicator();
  }

  // Update distance display
  function updateDistanceDisplay(progress) {
    const completedEl = document.getElementById('completedDistance');
    const remainingEl = document.getElementById('remainingDistance');

    if (completedEl && remainingEl && totalRouteDistance > 0) {
      const completed = (totalRouteDistance * progress / 100).toFixed(1);
      const remaining = (totalRouteDistance - parseFloat(completed)).toFixed(1);

      completedEl.textContent = `${completed} km`;
      remainingEl.textContent = `${remaining} km`;
    }
  }

  // Update vehicle position indicator
  function updateVehiclePositionIndicator() {
    const vehicleIndicator = document.getElementById('vehiclePositionIndicator');
    const distanceLineFill = document.getElementById('distanceLineFill');

    if (vehicleIndicator && distanceLineFill) {
      distanceLineFill.style.width = `${currentProgress}%`;
    }
  }

  // Calculate direct distance
  function calculateDirectDistance(coords1, coords2) {
    try {
      return turf.distance(
        turf.point(coords1),
        turf.point(coords2),
        { units: 'kilometers' }
      );
    } catch (error) {
      console.error('Distance calculation error:', error);
      return 0;
    }
  }

  // Update direct distance display
  function updateDirectDistanceDisplay(distance) {
    const directDistanceEl = document.getElementById('directDistance');
    if (directDistanceEl) {
      directDistanceEl.textContent = `${distance.toFixed(1)} km`;
    }
  }

  // Fit map to route
  function fitMapToRoute() {
    try {
      const bounds = new mapboxgl.LngLatBounds();

      // Extend bounds to include all coordinates
      if (routeCoordinates.length > 0) {
        routeCoordinates.forEach(coord => bounds.extend(coord));
      } else {
        bounds.extend(warehouseCoords);
        bounds.extend(deliveryCoords);
      }

      map.fitBounds(bounds, {
        padding: 100,
        duration: 1500
      });
    } catch (error) {
      console.error('Fit bounds error:', error);
    }
  }



  // Show fallback map (static image or simple div)
  function showFallbackMap() {
    const mapContainer = document.getElementById('map');
    if (mapContainer) {
      mapContainer.innerHTML = `
        <div style="width: 100%; height: 100%; background: #f0f4f8; display: flex; align-items: center; justify-content: center; border-radius: 16px;">
          <div style="text-align: center;">
            <i class="fas fa-map-marked-alt" style="font-size: 48px; color: #94a3b8; margin-bottom: 16px;"></i>
            <h5 style="color: #64748b; margin-bottom: 8px;">Map Unavailable</h5>
            <p style="color: #94a3b8; font-size: 14px;">Static route visualization is displayed below</p>
          </div>
        </div>
      `;
    }
  }

  // Show fallback route
  function showFallbackRoute() {
    drawStraightLineRoute();
    addBasicMarkers();
    addVehicleMarker();
    fitMapToRoute();
  }

  // Validate coordinates
  function isValidCoordinates(coords) {
    return Array.isArray(coords) &&
           coords.length === 2 &&
           !isNaN(coords[0]) &&
           !isNaN(coords[1]) &&
           Math.abs(coords[0]) <= 180 &&
           Math.abs(coords[1]) <= 90;
  }

  // UI Control Functions
  function zoomIn() {
    if (map) map.zoomIn();
  }

  function zoomOut() {
    if (map) map.zoomOut();
  }

  function centerMap() {
    if (map) fitMapToRoute();
  }

  function toggleTraffic() {
    if (!map) return;

    trafficVisible = !trafficVisible;
    const visibility = trafficVisible ? 'visible' : 'none';

    if (map.getLayer('traffic-flow')) {
      map.setLayoutProperty('traffic-flow', 'visibility', visibility);
    }

    const trafficBtn = document.querySelector('[onclick="toggleTraffic()"]');
    if (trafficBtn) {
      trafficBtn.innerHTML = trafficVisible ? '<i class="fas fa-car"></i>' :
        '<i class="fas fa-car" style="opacity: 0.5"></i>';
    }
  }

  function toggleVehicleInfo() {
    vehicleInfoVisible = !vehicleInfoVisible;
    const vehiclePanel = document.getElementById('vehicleInfoPanel');

    if (vehiclePanel) {
      vehiclePanel.classList.toggle('show', vehicleInfoVisible);
    }
  }

  function showDriverLocation() {
    if (map && vehicleMarker) {
      map.flyTo({
        center: vehicleMarker.getLngLat(),
        zoom: 14,
        duration: 1000
      });
      toggleVehicleInfo();
    }
  }

  function showOtherDeliveries() {
    alert('Showing other deliveries for this driver');
  }

  function shareTracking() {
    const trackingUrl = window.location.href;

    if (navigator.share) {
      navigator.share({
        title: 'Package Tracking',
        text: `Track my package: ${packageData.trackingId}`,
        url: trackingUrl
      });
    } else {
      navigator.clipboard.writeText(trackingUrl).then(() => {
        alert('Tracking link copied to clipboard!');
      });
    }
  }

  // Simulate delivery progress
  function simulateProgress() {
    if (currentProgress >= 100) {
      currentProgress = 0;
    }

    currentProgress += 10;
    if (currentProgress > 100) currentProgress = 100;

    // Update vehicle position
    const currentPosition = calculateCurrentPosition();
    if (vehicleMarker) {
      vehicleMarker.setLngLat(currentPosition);
    }

    // Update UI
    updateAllProgressUI(currentProgress);

    // Update ETA
    updateDynamicETA(currentProgress);
  }

  // Update dynamic ETA
  function updateDynamicETA(progress) {
    const dynamicETA = document.getElementById('dynamicETA');
    if (!dynamicETA) return;

    if (progress >= 100) {
      dynamicETA.textContent = 'Arrived';
      return;
    }

    const remainingDistance = totalRouteDistance * (1 - progress / 100);
    const etaHours = remainingDistance / (currentSpeed || 50);
    const etaTime = new Date(Date.now() + etaHours * 3600000);

    dynamicETA.textContent = etaTime.toLocaleTimeString([], {
      hour: '2-digit',
      minute: '2-digit'
    });
  }


  function toggleCollapse(header) {
  const allSections = document.querySelectorAll('.collapsible-section');
  
  allSections.forEach(section => {
    if(section.querySelector('.collapsible-header') !== header) {
      section.classList.remove('active');
    }
  });

  const parentSection = header.parentElement;
  parentSection.classList.toggle('active');
}

  // Initialize map when DOM is ready
  document.addEventListener('DOMContentLoaded', function() {
    console.log('DOM loaded, initializing map...');
    initMap();
  });



  // Expose functions globally
  window.zoomIn = zoomIn;
  window.zoomOut = zoomOut;
  window.centerMap = centerMap;
  window.toggleTraffic = toggleTraffic;
  window.toggleVehicleInfo = toggleVehicleInfo;
  window.showDriverLocation = showDriverLocation;
  window.showOtherDeliveries = showOtherDeliveries;
  window.shareTracking = shareTracking;
  window.simulateProgress = simulateProgress;
</script>
