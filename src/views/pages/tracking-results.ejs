    border-color: #10b981;
    background: #10b981;
  }

  .waypoint-marker.current {
    border-color: #f59e0b;
    background: #f59e0b;
    animation: marker-pulse 1.5s infinite;
  }

  @keyframes marker-pulse {
    0%,
    100% {
      transform: scale(1);
      opacity: 1;
    }
    50% {
      transform: scale(1.2);
      opacity: 0.8;
    }
  }

  /* Route Info Panel */
  .route-info-panel {
    position: absolute;
    bottom: 20px;
    left: 20px;
    right: 20px;
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(10px);
    border-radius: 12px;
    padding: 1rem;
    z-index: 1000;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.2);
  }

  @media (max-width: 768px) {
    .driver-panel {
      width: 100%;
      top: auto;
      right: auto;
      margin-bottom: 1rem;
      margin-top: -80px;
    }

    .compact-map-container {
      height: 400px;
    }

    .info-grid {
      grid-template-columns: 1fr;
    }

    .professional-header {
      padding: 1rem 0;
    }

    .route-info-panel {
      left: 10px;
      right: 10px;
      bottom: 10px;
    }
  }
