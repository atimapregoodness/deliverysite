    height: 500px;
    border-radius: 16px;
    overflow: hidden;
    position: relative;
    margin-bottom: 1.5rem;
    border: 1px solid rgba(0, 0, 0, 0.1);
  }

  #map {
    width: 100%;
    height: 100%;
  }

  .driver-panel {
    width: 320px;
    background: var(--glass-bg);
    backdrop-filter: blur(20px);
    border: 1px solid var(--glass-border);
    border-radius: 16px;
    box-shadow: var(--glass-shadow);
    padding: 1.25rem;
    z-index: 1000;
  }

  .driver-avatar {
    width: 64px;
    height: 64px;
    border-radius: 50%;
    background: var(--primary-gradient);
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-size: 1.5rem;
    font-weight: 600;
    margin: 0 auto 1rem;
  }

  .driver-avatar img {
    width: 100%;
    height: 100%;
    border-radius: 50%;
    object-fit: cover;
  }

  .driver-contact {
    display: flex;
    gap: 0.75rem;
    justify-content: center;
    margin-top: 1rem;
  }

  .contact-btn {
    width: 36px;
    height: 36px;
    border-radius: 50%;
    background: var(--primary-light);
    border: 1px solid var(--glass-border);
    color: var(--text-primary);
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
    cursor: pointer;
  }

  .contact-btn:hover {
    background: var(--primary-gradient);
    color: white;
    transform: translateY(-2px);
  }

  .progress-compact {
    height: 8px;
    background: rgba(226, 232, 240, 0.6);
    border-radius: 4px;
    overflow: hidden;
    margin: 1rem 0;
    position: relative;
  }

  .progress-fill {
    height: 100%;
    background: var(--primary-gradient);
    border-radius: 4px;
    position: relative;
    transition: width 0.5s ease;
  }

  .progress-fill::after {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(
      90deg,
      transparent 0%,
      rgba(255, 255, 255, 0.4) 50%,
      transparent 100%
    );
    animation: shimmer 2s infinite;
  }

  @keyframes shimmer {
    0% {
      transform: translateX(-100%);
    }
    100% {
      transform: translateX(100%);
    }
  }

